@model NT.SHARED.Models.User

@{
    ViewData["Title"] = "Tạo tài khoản mới";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var roles = ViewBag.Roles as SelectList;
}

<div class="container-fluid">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Quản lý tài khoản</a></li>
            <li class="breadcrumb-item active" aria-current="page">Tạo mới</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-user-plus me-2"></i>Tạo tài khoản mới</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div class="row g-3">
                            <!-- Username -->
                            <div class="col-md-6">
                                <label asp-for="Username" class="form-label">Tên đăng nhập <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    <input asp-for="Username" class="form-control" placeholder="Nhập tên đăng nhập" required />
                                </div>
                                <span asp-validation-for="Username" class="text-danger small"></span>
                            </div>

                            <!-- Password -->
                            <div class="col-md-6">
                                <label class="form-label">Mật khẩu <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                    <input type="password" name="plainPassword" class="form-control" placeholder="Tối thiểu 6 ký tự" minlength="6" required />
                                </div>
                                <span class="text-danger small">@Html.ValidationMessage("plainPassword")</span>
                            </div>

                            <!-- Fullname -->
                            <div class="col-md-6">
                                <label asp-for="Fullname" class="form-label">Họ và tên <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-id-card"></i></span>
                                    <input asp-for="Fullname" class="form-control" placeholder="Nhập họ và tên" required />
                                </div>
                                <span asp-validation-for="Fullname" class="text-danger small"></span>
                            </div>

                            <!-- Role -->
                            <div class="col-md-6">
                                <label asp-for="RoleId" class="form-label">Vai trò <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-user-tag"></i></span>
                                    <select asp-for="RoleId" asp-items="@roles" class="form-select" required>
                                        <option value="">-- Chọn vai trò --</option>
                                    </select>
                                </div>
                                <span asp-validation-for="RoleId" class="text-danger small"></span>
                            </div>

                            <!-- Email -->
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label">Email</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                    <input asp-for="Email" type="email" class="form-control" placeholder="example@email.com" />
                                </div>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <!-- Phone -->
                            <div class="col-md-6">
                                <label asp-for="PhoneNumber" class="form-label">Số điện thoại</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                    <input asp-for="PhoneNumber" class="form-control" placeholder="0xxx xxx xxx" />
                                </div>
                                <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                            </div>
                        </div>

                        <hr class="my-4" />

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i> Hủy
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i> Tạo tài khoản
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Info -->
            <div class="card shadow-sm mt-4">
                <div class="card-header bg-light">
                    <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Lưu ý</h6>
                </div>
                <div class="card-body">
                    <ul class="mb-0">
                        <li>Tên đăng nhập phải là duy nhất trong hệ thống</li>
                        <li>Mật khẩu phải có ít nhất 6 ký tự</li>
                        <li>Khi chọn vai trò:
                            <ul>
                                <li><strong>Admin:</strong> Có toàn quyền quản lý hệ thống</li>
                                <li><strong>Employee:</strong> Có thể quản lý đơn hàng, sản phẩm, khách hàng</li>
                                <li><strong>Customer:</strong> Chỉ có quyền mua hàng và quản lý tài khoản cá nhân</li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
