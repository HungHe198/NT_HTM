@model NT.SHARED.Models.Elasticity

@{
    ViewBag.Title = "Chi tiết độ đàn hồi";
}

<h1>Chi tiết độ đàn hồi</h1>

<dl class="row">
    <dt class="col-sm-2">Tên</dt><dd class="col-sm-10">@Model.Name</dd>
    <dt class="col-sm-2">Mô tả</dt><dd class="col-sm-10">@Model.Description</dd>
    <dt class="col-sm-2">Mã</dt><dd class="col-sm-10">@Model.Id</dd>
</dl>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
</p>
