@model NT.SHARED.DTOs.LoginDto
@{
    ViewBag.Title = "Login";
}

<h1>??ng nh?p</h1>
@if(TempData["Success"] != null){
    <div class="alert alert-success">@TempData["Success"]</div>
}
<form asp-action="Index" asp-controller="Login" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mb-3">
        <label class="form-label">Username</label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Password</label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">??ng nh?p</button>
    <a asp-action="Index" asp-controller="Register" asp-route-client="true" class="btn btn-outline-secondary ms-2">??ng ký</a>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}