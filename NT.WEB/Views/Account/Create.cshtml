@model NT.SHARED.Models.User
@{
    ViewBag.Title = "Register";
}

<h1>??ng ký</h1>
<form asp-action="Index" asp-controller="Register" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mb-3">
        <label class="form-label">Username</label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Fullname</label>
        <input asp-for="Fullname" class="form-control" />
        <span asp-validation-for="Fullname" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">M?t kh?u</label>
        <input asp-for="PasswordHash" type="password" class="form-control" />
        <span asp-validation-for="PasswordHash" class="text-danger"></span>
    </div>
    @if (!(ViewBag.IsClient ?? false))
    {
        <div class="mb-3">
            <label class="form-label">Vai trò</label>
            <select asp-for="RoleId" class="form-select" asp-items="ViewBag.Roles">
                <option value="">-- Ch?n vai trò --</option>
            </select>
            <span asp-validation-for="RoleId" class="text-danger"></span>
        </div>
    }
    <button type="submit" class="btn btn-primary">??ng ký</button>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}