@model IEnumerable<NT.SHARED.Models.Admin>

<h2>Quản trị viên</h2>
<p><a asp-action="Create" class="btn btn-primary">Tạo mới</a></p>
<table class="table">
    <thead>
        <tr>
            <th>Mã người dùng</th>
            <th>Chức vụ</th>
            <th>Lương</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.UserId</td>
            <td>@item.Position</td>
            <td>@item.Salary?.ToString("N0")</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Chi tiết</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Sửa</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
            </td>
        </tr>
    }
    </tbody>
</table>
