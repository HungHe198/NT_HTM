@model NT.SHARED.Models.Admin

<h2>Chi tiết quản trị viên</h2>
<dl class="row">
    <dt class="col-sm-2">Mã người dùng</dt>
    <dd class="col-sm-10">@Model.UserId</dd>
    <dt class="col-sm-2">Chức vụ</dt>
    <dd class="col-sm-10">@Model.Position</dd>
    <dt class="col-sm-2">Lương</dt>
    <dd class="col-sm-10">@Model.Salary?.ToString("N0")</dd>
</dl>
<p>
    <a asp-action="Edit" asp-route-id="@Model.Id">Sửa</a> |
    <a asp-action="Index">Quay lại danh sách</a>
</p>
