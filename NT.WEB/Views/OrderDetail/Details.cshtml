@model NT.SHARED.Models.OrderDetail

<h2>Chi tiết đơn hàng</h2>
<dl class="row">
    <dt class="col-sm-2">Mã đơn hàng</dt>
    <dd class="col-sm-10">@Model.OrderId</dd>
    <dt class="col-sm-2">Mã biến thể SP</dt>
    <dd class="col-sm-10">@Model.ProductDetailId</dd>
    <dt class="col-sm-2">Số lượng</dt>
    <dd class="col-sm-10">@Model.Quantity</dd>
    <dt class="col-sm-2">Đơn giá</dt>
    <dd class="col-sm-10">@Model.UnitPrice</dd>
    <dt class="col-sm-2">Tổng tiền</dt>
    <dd class="col-sm-10">@Model.TotalPrice</dd>
</dl>
<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Sửa</a> |
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
</p>

