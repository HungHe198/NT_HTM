@model IEnumerable<NT.SHARED.Models.OrderDetail>

<h2>Chi tiết đơn hàng</h2>
<p><a asp-action="Create" class="btn btn-primary">Tạo mới</a></p>
<table class="table">
    <thead>
        <tr>
            <th>Mã đơn hàng</th>
            <th>Mã biến thể SP</th>
            <th>Mã sản phẩm</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Tổng tiền</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.OrderId</td>
            <td>@item.ProductDetailId</td>
            <td>@item.ProductCodeAtOrder</td>
            <td>@item.Quantity</td>
            <td>@item.UnitPrice</td>
            <td>@item.TotalPrice</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Chi tiết</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Sửa</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
            </td>
        </tr>
    }
    </tbody>
</table>

