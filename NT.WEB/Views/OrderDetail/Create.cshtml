@model NT.SHARED.Models.OrderDetail

<h2>Tạo chi tiết đơn hàng</h2>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="OrderId">Mã đơn hàng</label>
        <input asp-for="OrderId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ProductDetailId">Mã biến thể SP</label>
        <input asp-for="ProductDetailId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Quantity">Số lượng</label>
        <input asp-for="Quantity" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="UnitPrice">Đơn giá</label>
        <input asp-for="UnitPrice" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>

