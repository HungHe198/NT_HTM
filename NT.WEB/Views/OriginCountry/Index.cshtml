@model IEnumerable<NT.SHARED.Models.OriginCountry>

@{
    ViewBag.Title = "Quản lý xuất xứ";  
}

<h1>Quản lý xuất xứ</h1>

<p>
    <a asp-controller="Product" asp-action="Index" class="btn btn-secondary me-2">
        <i class="bi bi-arrow-left"></i> Quay lại quản lý sản phẩm
    </a>
</p>

<div class="mb-3 d-flex justify-content-between align-items-center">
    <form method="get" asp-action="Index" class="form-inline">
        <div class="input-group">
            <input type="search" name="q" value="@Context.Request.Query["q"]" class="form-control" placeholder="Tìm theo tên..." />
            <button class="btn btn-outline-secondary" type="submit">Tìm</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Reset</a>
        </div>
    </form>
    <p class="mb-0"><a asp-action="Create" class="btn btn-primary">Tạo mới</a></p>
</div>

@{
    var count = Model?.Count() ?? 0;
}
<p>Hiện có <strong>@count</strong> kết quả</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Mô tả</th>
            <th style="width:220px">Thao tác</th>
        </tr>
    </thead>
    <tbody>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">Chi tiết</a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">Sửa</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Xóa</a>
            </td>
        </tr>
    }
    </tbody>
</table>
