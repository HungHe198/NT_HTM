@model NT.SHARED.Models.OriginCountry

@{
    ViewBag.Title = "Chi tiết xuất xứ";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chính</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Quản lý xuất xứ</a></li>
        <li class="breadcrumb-item active" aria-current="page">Chi tiết</li>
    </ol>
</nav>

<div class="d-flex justify-content-between align-items-start mb-3">
    <h1 class="h3 mb-0">@Model.Name</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-warning me-1">Sửa</a>
        <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">Xóa</button>
        <a asp-action="Index" class="btn btn-sm btn-secondary ms-2">Quay lại</a>
    </div>
</div>

<div class="card mb-4">
    <div class="card-body">
        <div class="row">
            <div class="col-md-8">
                <h5 class="card-title">Thông tin chung</h5>
                <dl class="row">
                    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Name)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(m => m.Name)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Description)</dt>
                    <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.Description) ? Html.Encode(Model.Description) : "(Không có mô tả)")</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Id)</dt>
                    <dd class="col-sm-9 text-muted">@Model.Id</dd>
                </dl>
            </div>
            <div class="col-md-4 d-flex align-items-center justify-content-center">
                <div class="text-center">
                    <img src="/images/flag-placeholder.png" alt="@Model.Name" class="img-fluid rounded mb-2" style="max-height:100px" />
                    <p class="mb-0 text-muted">@Model.Name</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <strong>Sản phẩm liên quan</strong>
        <span class="text-muted">@((Model.ProductDetails?.Count) ?? 0) mục</span>
    </div>
    <div class="card-body p-0">
        @if (Model.ProductDetails != null && Model.ProductDetails.Any())
        {
            <div class="table-responsive">
                <table class="table table-sm table-striped mb-0">
                    <thead>
                        <tr>
                            <th>ProductId</th>
                            <th>Giá</th>
                            <th>Tồn</th>
                            <th>Hoạt động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var pd in Model.ProductDetails)
                        {
                            <tr>
                                <td>@(pd?.GetType().GetProperty("ProductId")?.GetValue(pd) ?? "-")</td>
                                <td>
                                    @(pd?.GetType().GetProperty("Price")?.GetValue(pd) is decimal price ? String.Format("{0:N0} đ", price) : "-")
                                </td>
                                <td>@(pd?.GetType().GetProperty("StockQuantity")?.GetValue(pd) ?? "-")</td>
                                <td>@(pd?.GetType().GetProperty("IsActive")?.GetValue(pd) is bool act ? (act ? "Có" : "Không") : "-")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="p-3 text-muted">Không có sản phẩm liên quan.</div>
        }
    </div>
</div>

<!-- Delete confirmation modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Xác nhận xóa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Bạn có chắc chắn muốn xóa xuất xứ "<strong>@Model.Name</strong>" không?
            </div>
            <div class="modal-footer">
                <form asp-action="Delete" method="post" class="m-0">
                    <input type="hidden" asp-for="Id" />
                    <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                </form>
            </div>
        </div>
    </div>
</div>
