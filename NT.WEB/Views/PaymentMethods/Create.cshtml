@using NT.SHARED.Models
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Tạo phương thức thanh toán</h2>
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">@string.Join("; ", ViewData.ModelState.Values.SelectMany(v => v.Errors).Select(e => e.ErrorMessage))</div>
}
<form asp-action="Create" asp-controller="PaymentMethods" method="post">
    <div class="mb-2">
        <label class="form-label">Tên</label>
        <input type="text" name="name" class="form-control" required />
    </div>
    <div class="mb-2">
        <label class="form-label">Mô tả</label>
        <input type="text" name="description" class="form-control" />
    </div>
    <div class="mb-2">
        <label class="form-label">Kênh bán hàng áp dụng</label>
        <select name="channel" class="form-select" required>
            <option value="@((int)SalesChannel.All)">Tất cả (Online & Offline)</option>
            <option value="@((int)SalesChannel.Online)">Chỉ Online (COD)</option>
            <option value="@((int)SalesChannel.Offline)">Chỉ Offline/POS (Tiền mặt, Chuyển khoản)</option>
        </select>
        <small class="text-muted">Online: COD - Thanh toán khi nhận hàng | Offline: Tiền mặt, Chuyển khoản tại quầy</small>
    </div>
    <button class="btn btn-primary" type="submit">Lưu</button>
    <a class="btn btn-secondary" asp-action="Index">Hủy</a>
</form>
