@model IEnumerable<NT.SHARED.Models.PaymentMethod>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Phương thức thanh toán</h2>
<p>
    <a class="btn btn-primary" asp-action="Create" asp-controller="PaymentMethods">Tạo mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Mô tả</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td class="text-nowrap">
                <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">Xem</a>
                <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Sửa</a>
                <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
            </td>
        </tr>
    }
    </tbody>
</table>
