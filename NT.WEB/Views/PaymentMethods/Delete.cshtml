@model NT.SHARED.Models.PaymentMethod
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Xóa phương thức thanh toán</h2>
<div>
    <h4>@Model.Name</h4>
    <p>Bạn có chắc muốn xóa phương thức này?</p>
    <form asp-action="Delete" asp-controller="PaymentMethods" method="post">
        <input type="hidden" asp-for="Id" />
        <button class="btn btn-danger" type="submit">Xóa</button>
        <a class="btn btn-secondary" asp-action="Index">Hủy</a>
    </form>
</div>
