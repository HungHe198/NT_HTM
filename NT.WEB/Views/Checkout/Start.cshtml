@{
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
    var paymentMethods = ViewBag.PaymentMethods as IEnumerable<NT.SHARED.Models.PaymentMethod> ?? Enumerable.Empty<NT.SHARED.Models.PaymentMethod>();
    string selectedIds = ViewBag.SelectedIds as string ?? string.Empty;
    var cartId = ViewBag.CartId;
    
    // Đọc dữ liệu từ ViewBag (được tính toán trong controller)
    decimal subtotal = (decimal)(ViewBag.Subtotal ?? 0m);
    decimal shipping = (decimal)(ViewBag.ShippingFee ?? 35000m);
    decimal discount = (decimal)(ViewBag.VoucherDiscount ?? 0m);
    decimal total = (decimal)(ViewBag.Total ?? 0m);
    string? appliedCode = ViewBag.AppliedVoucherCode as string;
}

<h2>Thanh toán</h2>
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<div class="row">
    <div class="col-md-7">
        <h5>Sản phẩm đã chọn</h5>
        <table class="table">
            <thead>
                <tr>
                    <th>Tên</th>
                    <th>Thuộc tính</th>
                    <th>Đơn giá</th>
                    <th>Số lượng</th>
                    <th>Tạm tính</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in (IEnumerable<object>)Model)
            {
                dynamic it = item;
                <tr>
                    <td>@it.Name</td>
                    <td><small>Chiều dài: @it.Length, độ cứng: @it.Hardness</small></td>
                    <td>@string.Format("{0:#,##0}", it.Price)</td>
                    <td>@it.Quantity</td>
                    <td>@string.Format("{0:#,##0}", (decimal)it.Price * (int)it.Quantity)</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <div class="col-md-5">
        <h5>Thông tin người nhận</h5>
        <form asp-action="Submit" asp-controller="Checkout" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="cartId" value="@cartId" />
            <input type="hidden" name="selectedIds" value="@selectedIds" />
            <div class="mb-2">
                <label class="form-label">Số điện thoại</label>
                <input type="text" name="phoneNumber" class="form-control" required />
            </div>
            <div class="mb-2">
                <label class="form-label">Địa chỉ giao hàng</label>
                <input type="text" name="shippingAddress" class="form-control" required />
            </div>
            <div class="mb-2">
                <label class="form-label">Phương thức thanh toán</label>
                <select name="paymentMethodId" class="form-select" required>
                    <option value="">-- Chọn phương thức --</option>
                    @foreach (var m in paymentMethods)
                    {
                        <option value="@m.Id">@m.Name</option>
                    }
                </select>
            </div>
            <button type="submit" class="btn btn-primary w-100">Đặt hàng</button>
        </form>

        <div class="card mt-3">
            <div class="card-body">
                <h6 class="card-title">Mã giảm giá</h6>
                @if (string.IsNullOrWhiteSpace(appliedCode))
                {
                    <form asp-action="ApplyVoucher" asp-controller="Checkout" method="post" class="input-group mb-2">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="cartId" value="@cartId" />
                        <input type="hidden" name="selectedIds" value="@selectedIds" />
                        <input type="text" name="code" class="form-control" placeholder="Nhập mã giảm giá" />
                        <button class="btn btn-outline-primary" type="submit">Áp dụng</button>
                    </form>
                }
                else
                {
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="text-success">Đã áp dụng: <strong>@appliedCode</strong></span>
                        <form asp-action="RemoveVoucher" asp-controller="Checkout" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="cartId" value="@cartId" />
                            <input type="hidden" name="selectedIds" value="@selectedIds" />
                            <button class="btn btn-link btn-sm text-danger p-0" type="submit">Bỏ mã</button>
                        </form>
                    </div>
                }
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-body">
                <h6 class="card-title">Tổng cộng</h6>
                <div class="d-flex justify-content-between"><span>Tạm tính</span><strong>@subtotal.ToString("#,##0")</strong></div>
                <div class="d-flex justify-content-between"><span>Vận chuyển</span><strong>@shipping.ToString("#,##0")</strong></div>
                @if (discount > 0)
                {
                    <div class="d-flex justify-content-between"><span>Giảm theo voucher</span><strong class="text-success">-@discount.ToString("#,##0")</strong></div>
                }
                <hr />
                <div class="d-flex justify-content-between"><span>Tổng Tiền</span><strong class="fs-5">@total.ToString("#,##0")</strong></div>
            </div>
        </div>
    </div>
</div>
