@using NT.WEB.DTO
@model IEnumerable<CartItemDto>
@{
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
    var calcSubtotal = Model.Where(i => i.Quantity > 0).Sum(i => i.UnitPrice * i.Quantity);
    var shipping = 35000m; // flat demo fee
    // Read voucher from session (shared with CartController)
    var appliedCode = ViewContext?.HttpContext?.Session?.GetString("SESSION_VOUCHER_CODE");
    decimal voucherDiscount = 0m;
    var discountStr = ViewContext?.HttpContext?.Session?.GetString("SESSION_VOUCHER_DISCOUNT");
    if (!string.IsNullOrWhiteSpace(discountStr) && decimal.TryParse(discountStr, out var d))
    {
        voucherDiscount = d;
    }
    var total = calcSubtotal + shipping - voucherDiscount;
}

<h2>Giỏ hàng</h2>
<div class="row">
    <div class="col-md-8">
        @if (!Model.Any())
        {
            <div>Giỏ hàng trống.</div>
        }
        else
        {
            <form asp-action="CheckoutSelected" asp-controller="CartDetail" asp-route-cartId="@ViewBag.CartId" method="post">
            <table class="table">
                <thead>
                    <tr>
                        <th></th>
                        <th>Sản phẩm</th>
                        <th>Giá</th>
                        <th>Số lượng</th>
                        <th>Tạm tính</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.Where(i => i.Quantity > 0))
                {
                    <tr>
                        <td>
                            <input type="checkbox" name="selectedIds" value="@item.ProductDetailId" />
                        </td>
                        <td>
                            <div class="d-flex align-items-center gap-2">
                                <img src="@(item.Thumbnail ?? "/images/product-placeholder.png")" alt="@item.ProductName" style="width:60px;height:60px;object-fit:cover" />
                                <div>
                                    <div>@(string.IsNullOrWhiteSpace(item.ProductName) ? "Sản phẩm" : item.ProductName)</div>
                                    <small class="text-muted">Độ dài: @(string.IsNullOrWhiteSpace(item.LengthName) ? "N/A" : item.LengthName), Độ cứng: @(string.IsNullOrWhiteSpace(item.HardnessName) ? "N/A" : item.HardnessName),@*  Màu: @(string.IsNullOrWhiteSpace(item.ColorName) ? "N/A" : item.ColorName *@)</small>
                                </div>
                            </div>
                        </td>
                        <td class="text-nowrap">@item.UnitPrice.ToString("#,##0")</td>
                        <td>
                            <div class="d-inline-flex align-items-center gap-1" data-pd-id="@item.ProductDetailId">
                                <button type="button" class="btn btn-outline-secondary btn-sm qty-minus">-</button>
                                <input type="number" class="form-control form-control-sm qty-input" value="@item.Quantity" min="1" style="width:60px" />
                                <button type="button" class="btn btn-outline-secondary btn-sm qty-plus">+</button>
                            </div>
                        </td>
                        <td class="text-nowrap">@string.Format("{0:#,##0}", item.UnitPrice * item.Quantity)</td>
                        <td>
                            <button class="btn btn-link text-danger" type="submit" formmethod="post" formaction="@Url.Action("Remove", "CartDetail", new { cartId = ViewBag.CartId, productDetailId = item.ProductDetailId })">Xóa</button>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
            <div class="d-flex gap-2 mb-3">
                <button type="submit" class="btn btn-warning">Thanh toán mục đã chọn</button>
            </div>
            </form>
        }
        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Tiếp tục xem sản phẩm</a>
            <button class="btn btn-secondary" disabled>Cập nhật giỏ hàng</button>
        </div>
    
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Tổng cộng giỏ hàng</h5>
                <form asp-action="ApplyVoucher" asp-controller="Cart" method="post" class="input-group mb-3">
                    <input type="text" name="code" class="form-control" placeholder="Nhập mã giảm giá" value="@appliedCode" />
                    <button class="btn btn-outline-primary" type="submit">Áp dụng</button>
                </form>
                @if (!string.IsNullOrWhiteSpace(appliedCode))
                {
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <small class="text-success">Đã áp dụng: <strong>@appliedCode</strong></small>
                        <form asp-action="RemoveVoucher" asp-controller="Cart" method="post" class="d-inline">
                            <button class="btn btn-link btn-sm text-danger" type="submit">Bỏ mã</button>
                        </form>
                    </div>
                }
                <div class="d-flex justify-content-between"><span>Tạm tính</span> <strong>@calcSubtotal.ToString("#,##0")</strong></div>
                <div class="d-flex justify-content-between"><span>Vận chuyển</span> <strong>@shipping.ToString("#,##0")</strong></div>
                @if (voucherDiscount > 0)
                {
                    <div class="d-flex justify-content-between"><span>Giảm theo voucher</span> <strong class="text-success">-@voucherDiscount.ToString("#,##0")</strong></div>
                }
                <hr />
                <div class="d-flex justify-content-between"><span>Tổng</span> <strong>@total.ToString("#,##0")</strong></div>
                <div class="d-flex gap-2 mb-3">
              
            </div>
            </div>
        </div>
    </div>
</div>

<script>
    (function() {
        const cartId = '@ViewBag.CartId';
        function postUpdate(productDetailId, quantity) {
            const form = document.createElement('form');
            form.method = 'post';
            form.action = '/CartDetail/UpdateQty?cartId=' + encodeURIComponent(cartId);
            const pd = document.createElement('input'); pd.type = 'hidden'; pd.name = 'productDetailId'; pd.value = productDetailId;
            const q = document.createElement('input'); q.type = 'hidden'; q.name = 'quantity'; q.value = quantity;
            form.appendChild(pd); form.appendChild(q);
            document.body.appendChild(form);
            form.submit();
        }

        document.querySelectorAll('.qty-minus').forEach(btn => {
            btn.addEventListener('click', function() {
                const wrap = this.parentElement;
                const input = wrap.querySelector('.qty-input');
                const pdId = wrap.getAttribute('data-pd-id');
                const val = Math.max(1, parseInt(input.value || '1') - 1);
                input.value = val;
                postUpdate(pdId, val);
            });
        });
        document.querySelectorAll('.qty-plus').forEach(btn => {
            btn.addEventListener('click', function() {
                const wrap = this.parentElement;
                const input = wrap.querySelector('.qty-input');
                const pdId = wrap.getAttribute('data-pd-id');
                const val = Math.max(1, parseInt(input.value || '1') + 1);
                input.value = val;
                postUpdate(pdId, val);
            });
        });
        document.querySelectorAll('.qty-input').forEach(inp => {
            inp.addEventListener('change', function() {
                const wrap = this.parentElement;
                const pdId = wrap.getAttribute('data-pd-id');
                const val = Math.max(1, parseInt(this.value || '1'));
                this.value = val;
                postUpdate(pdId, val);
            });
        });
    })();
</script>
