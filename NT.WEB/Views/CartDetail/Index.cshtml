@using NT.WEB.DTO
@model IEnumerable<CartItemDto>
@{
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
    var shipping = 35000m; // flat demo fee
}

<h2>Giỏ hàng của bạn</h2>
<div class="row">
    <div class="col-md-8">
        @if (!Model.Any())
        {
            <div>Giỏ hàng trống.</div>
        }
        else
        {
            <form asp-action="CheckoutSelected" asp-controller="CartDetail" asp-route-cartId="@ViewBag.CartId" method="post">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            <input type="checkbox" id="selectAll" title="Chọn tất cả" />
                        </th>
                        <th>Sản phẩm</th>
                        <th>Giá</th>
                        <th>Số lượng</th>
                        <th>Tạm tính</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.Where(i => i.Quantity > 0))
                {
                    <tr>
                        <td>
                            <input type="checkbox" name="selectedIds" value="@item.ProductDetailId" 
                                   class="item-checkbox"
                                   data-price="@item.UnitPrice" 
                                   data-quantity="@item.Quantity" />
                        </td>
                        <td>
                            <div class="d-flex align-items-center gap-2">
                                <img src="@(item.Thumbnail ?? "/images/product-placeholder.png")" alt="@item.ProductName" style="width:60px;height:60px;object-fit:cover" />
                                <div>
                                    <div>@(string.IsNullOrWhiteSpace(item.ProductName) ? "Sản phẩm" : item.ProductName)</div>
                                    <small class="text-muted">Độ dài: @(string.IsNullOrWhiteSpace(item.LengthName) ? "N/A" : item.LengthName), Độ cứng: @(string.IsNullOrWhiteSpace(item.HardnessName) ? "N/A" : item.HardnessName)</small>
                                </div>
                            </div>
                        </td>
                        <td class="text-nowrap">@item.UnitPrice.ToString("#,##0")</td>
                        <td>
                            <div class="d-inline-flex align-items-center gap-1" data-pd-id="@item.ProductDetailId">
                                <button type="button" class="btn btn-outline-secondary btn-sm qty-minus">-</button>
                                <input type="number" class="form-control form-control-sm qty-input" value="@item.Quantity" min="1" style="width:60px" />
                                <button type="button" class="btn btn-outline-secondary btn-sm qty-plus">+</button>
                            </div>
                        </td>
                        <td class="text-nowrap item-subtotal">@string.Format("{0:#,##0}", item.UnitPrice * item.Quantity)</td>
                        <td>
                            <button class="btn btn-link text-danger" type="submit" formmethod="post" formaction="@Url.Action("Remove", "CartDetail", new { cartId = ViewBag.CartId, productDetailId = item.ProductDetailId })">Xóa</button>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
            <div class="d-flex gap-2 mb-3">
                <button type="submit" class="btn btn-warning" id="btnCheckout" disabled>Thanh toán mục đã chọn</button>
                <span class="text-muted align-self-center" id="selectedCount">(Chưa chọn sản phẩm nào)</span>
            </div>
            </form>
        }
        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Tiếp tục xem sản phẩm</a>
        </div>
    
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Tổng cộng đã chọn</h5>
                <div class="d-flex justify-content-between"><span>Tạm tính (<span id="itemCount">0</span> sản phẩm)</span> <strong id="subtotalDisplay">0</strong></div>
                <div class="d-flex justify-content-between"><span>Vận chuyển</span> <strong id="shippingDisplay">@shipping.ToString("#,##0")</strong></div>
                <hr />
                <div class="d-flex justify-content-between"><span>Tổng</span> <strong class="fs-5" id="totalDisplay">0</strong></div>
                <p class="text-muted small mt-2">Mã giảm giá sẽ được áp dụng tại bước thanh toán</p>
                <div id="noSelectionMsg" class="text-warning small">Vui lòng chọn sản phẩm để xem tổng tiền</div>
            </div>
        </div>
    </div>
</div>

<script>
    (function() {
        const cartId = '@ViewBag.CartId';
        const shippingFee = @((int)shipping);
        
        // Format number with thousand separators
        function formatNumber(num) {
            return num.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
        }
        
        // Calculate and update totals based on selected checkboxes
        function updateTotals() {
            const checkboxes = document.querySelectorAll('.item-checkbox:checked');
            let subtotal = 0;
            let itemCount = 0;
            
            checkboxes.forEach(cb => {
                const price = parseFloat(cb.getAttribute('data-price')) || 0;
                const qty = parseInt(cb.getAttribute('data-quantity')) || 0;
                subtotal += price * qty;
                itemCount++;
            });
            
            const total = itemCount > 0 ? subtotal + shippingFee : 0;
            
            document.getElementById('subtotalDisplay').textContent = formatNumber(subtotal);
            document.getElementById('totalDisplay').textContent = formatNumber(total);
            document.getElementById('itemCount').textContent = itemCount;
            document.getElementById('shippingDisplay').textContent = itemCount > 0 ? formatNumber(shippingFee) : '0';
            
            // Update button state and message
            const btnCheckout = document.getElementById('btnCheckout');
            const selectedCount = document.getElementById('selectedCount');
            const noSelectionMsg = document.getElementById('noSelectionMsg');
            
            if (itemCount > 0) {
                btnCheckout.disabled = false;
                selectedCount.textContent = `(Đã chọn ${itemCount} sản phẩm)`;
                noSelectionMsg.style.display = 'none';
            } else {
                btnCheckout.disabled = true;
                selectedCount.textContent = '(Chưa chọn sản phẩm nào)';
                noSelectionMsg.style.display = 'block';
            }
            
            // Update "Select All" checkbox state
            const allCheckboxes = document.querySelectorAll('.item-checkbox');
            const selectAllCb = document.getElementById('selectAll');
            if (selectAllCb) {
                selectAllCb.checked = allCheckboxes.length > 0 && checkboxes.length === allCheckboxes.length;
                selectAllCb.indeterminate = checkboxes.length > 0 && checkboxes.length < allCheckboxes.length;
            }
        }
        
        // Add event listeners to checkboxes
        document.querySelectorAll('.item-checkbox').forEach(cb => {
            cb.addEventListener('change', updateTotals);
        });
        
        // Select All functionality
        const selectAllCb = document.getElementById('selectAll');
        if (selectAllCb) {
            selectAllCb.addEventListener('change', function() {
                const checkboxes = document.querySelectorAll('.item-checkbox');
                checkboxes.forEach(cb => cb.checked = this.checked);
                updateTotals();
            });
        }
        
        // Initial calculation
        updateTotals();
        
        function postUpdate(productDetailId, quantity) {
            const form = document.createElement('form');
            form.method = 'post';
            form.action = '/CartDetail/UpdateQty?cartId=' + encodeURIComponent(cartId);
            const pd = document.createElement('input'); pd.type = 'hidden'; pd.name = 'productDetailId'; pd.value = productDetailId;
            const q = document.createElement('input'); q.type = 'hidden'; q.name = 'quantity'; q.value = quantity;
            form.appendChild(pd); form.appendChild(q);
            document.body.appendChild(form);
            form.submit();
        }

        document.querySelectorAll('.qty-minus').forEach(btn => {
            btn.addEventListener('click', function() {
                const wrap = this.parentElement;
                const input = wrap.querySelector('.qty-input');
                const pdId = wrap.getAttribute('data-pd-id');
                const val = Math.max(1, parseInt(input.value || '1') - 1);
                input.value = val;
                postUpdate(pdId, val);
            });
        });
        document.querySelectorAll('.qty-plus').forEach(btn => {
            btn.addEventListener('click', function() {
                const wrap = this.parentElement;
                const input = wrap.querySelector('.qty-input');
                const pdId = wrap.getAttribute('data-pd-id');
                const val = Math.max(1, parseInt(input.value || '1') + 1);
                input.value = val;
                postUpdate(pdId, val);
            });
        });
        document.querySelectorAll('.qty-input').forEach(inp => {
            inp.addEventListener('change', function() {
                const wrap = this.parentElement;
                const pdId = wrap.getAttribute('data-pd-id');
                const val = Math.max(1, parseInt(this.value || '1'));
                this.value = val;
                postUpdate(pdId, val);
            });
        });
    })();
</script>
