@model IEnumerable<NT.SHARED.Models.Color>

@{
    ViewBag.Title = "Màu sắc";
}

<h1>Màu sắc</h1>

<p><a asp-action="Create" class="btn btn-primary">Tạo mới</a></p>

<table class="table">
    <thead><tr><th>Tên</th><th>Mã màu</th><th></th></tr></thead>
    <tbody>
    @foreach(var c in Model)
    {
        <tr>
            <td>@c.Name</td>
            <td>@c.HexCode</td>
            <td>
                <a asp-action="Details" asp-route-id="@c.Id">Chi tiết</a> |
                <a asp-action="Edit" asp-route-id="@c.Id">Sửa</a> |
                <a asp-action="Delete" asp-route-id="@c.Id">Xóa</a>
            </td>
        </tr>
    }
    </tbody>
</table>
