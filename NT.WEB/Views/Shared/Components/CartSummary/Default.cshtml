@model IEnumerable<NT.SHARED.Models.CartDetail>
@{
    var count = Model?.Sum(i => i.Quantity) ?? 0;
    var cartId = ViewData["CartId"] as Guid?;
}
<a asp-controller="CartDetail" asp-action="Index" asp-route-cartId="@cartId" 
   class="btn btn-cart-header me-3 text-decoration-none" 
   title="Xem giỏ hàng">
    <i class="fa fa-shopping-cart me-1"></i>
    @if (count > 0)
    {
        <span class="cart-count">@count sản phẩm</span>
    }
    else
    {
        <span class="cart-count">Giỏ hàng</span>
    }
</a>

<style>
    .btn-cart-header {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        background: linear-gradient(135deg, #00838f, #00bcd4);
        color: white !important;
        padding: 8px 16px;
        border-radius: 25px;
        font-weight: 600;
        font-size: 0.85rem;
        transition: all 0.3s ease;
        box-shadow: 0 2px 10px rgba(0, 131, 143, 0.3);
    }
    
    .btn-cart-header:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(0, 131, 143, 0.4);
        background: linear-gradient(135deg, #006064, #00838f);
        color: white !important;
    }
    
    .btn-cart-header .cart-count {
        background: rgba(255, 255, 255, 0.2);
        padding: 2px 10px;
        border-radius: 15px;
        font-size: 0.8rem;
    }
</style>
