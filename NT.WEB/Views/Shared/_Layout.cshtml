@{
    Layout = null;
    var title = ViewData["Title"] ?? "NT.WEB";
    // Query products for layout fallback grid
    var layoutProducts = await ProductService.GetAllAsync();
    var layoutList = new List<dynamic>();
    foreach (var p in layoutProducts)
    {
        var brand = await BrandService.GetByIdAsync(p.BrandId);
        layoutList.Add(new { p.Id, p.Name, BrandName = brand?.Name, Thumbnail = p.Thumbnail });
        if (layoutList.Count >= 16) break;
    }
    ViewBag.LayoutProducts = layoutList;
}
@inject NT.WEB.Services.ProductWebService ProductService
@inject NT.WEB.Services.BrandWebService BrandService
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - NT.WEB</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)

    <style>
        /* Lightweight styles to match the sample */
        body { background: #f5f7fb; }
        .topbar { background: #fff; border-bottom: 1px solid #e6eef9; }
        .site-logo { color:#00bcd4; font-weight:700; font-size:100; display:flex; align-items:center; gap:.5rem; }
        .site-logo img { background: none; display:block; height:100px; width:auto; }
        .product-card { background: #fff; border: 1px solid #eceff3; border-radius: .5rem; padding: .75rem; }
        .sidebar-card { background:#fff; border-radius:.5rem; padding:1rem; border:1px solid #eef4fb; }
        .footer-cta { background:#00b8d4; color:#fff; padding:2.5rem 1rem; }
        .badge-sale { background:#00bcd4; color:#fff; font-weight:600; font-size:.75rem; padding:.35rem .5rem; border-radius:.4rem; }
        .page-pagination .page-link { color:#00bcd4; }
    </style>
</head>
<body>
    <header class="topbar">
        <nav class="navbar navbar-expand-lg container">
            <a class="navbar-brand site-logo" asp-controller="Home" asp-action="Index">
                <img src="~/css/Gemini_Generated_Image_7h114z7h114z7h11.png" alt="Logo" />
                <span>Fishing Shop</span>
            </a>

            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="IndexAdmin">Quản Lý</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Product" asp-action="Index">Shop</a></li>
                </ul>

                <form class="d-flex me-3 position-relative" role="search" method="get" asp-controller="Product" asp-action="Index" autocomplete="off">
                    <input id="global-search" class="form-control form-control-sm me-2" type="search" name="q" placeholder="Tìm sản phẩm..." />
                    <button class="btn btn-sm btn-outline-primary" type="submit"><i class="fa fa-search"></i></button>
                    <div id="global-suggest" class="list-group position-absolute" style="top:100%;left:0;width:380px;max-height:420px;overflow:auto;display:none;z-index:1050"></div>
                </form>

                <div class="d-flex align-items-center">
                    <a class="me-3 text-muted" href="#"><i class="fa fa-heart"></i></a>
                    <a class="me-3 text-muted" href="#"><i class="fa fa-shopping-cart"></i> <span class="badge bg-danger">3</span></a>
                    <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login">Đămg Nhập</a></li>
                </div>
            </div>
        </nav>
    </header>

    <main class="container-fluid my-4">
        <div class="row gx-4">
            <!-- Sidebar filters -->
            <aside class="col-lg-3 mb-4">
                <div class="sidebar-card mb-3">
                    <h6 class="mb-3">Filter by price</h6>
                    <div class="mb-2">
                        <input type="range" class="form-range" min="0" max="500" />
                    </div>
                    <div class="d-flex justify-content-between small text-muted">
                        <div>$0</div>
                        <div>$500+</div>
                    </div>
                    <div class="mt-3">
                        <button class="btn btn-sm btn-primary w-100">Filter</button>
                    </div>
                </div>

                <div class="sidebar-card mb-3">
                    <h6 class="mb-3">Products</h6>
                    <div>
                        @await Component.InvokeAsync("FeaturedProducts")
                    </div>
                </div>

                <div class="sidebar-card">
                    <h6 class="mb-3">Categories</h6>
                    <div class="list-group list-group-flush">
                        <a class="list-group-item list-group-item-action" asp-controller="Product" asp-action="Index">All</a>
                        <a class="list-group-item list-group-item-action" asp-controller="Product" asp-action="Index" asp-route-cat="rods">Rods</a>
                        <a class="list-group-item list-group-item-action" asp-controller="Product" asp-action="Index" asp-route-cat="reels">Reels</a>
                        <a class="list-group-item list-group-item-action" asp-controller="Product" asp-action="Index" asp-route-cat="lines">Lines</a>
                    </div>
                </div>
            </aside>

            <!-- Main content -->
            <section class="col-lg-9">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div>
                        <small class="text-muted">Showing 1–16 of 48 results</small>
                        <h2 class="h5 mb-0">@title</h2>
                    </div>
                    <div class="d-flex align-items-center">
                        <select class="form-select form-select-sm me-2">
                            <option>Default sorting</option>
                            <option>Price: Low to High</option>
                        </select>
                        <a class="btn btn-sm btn-outline-secondary" asp-controller="Product" asp-action="Create">Thôi</a>
                    </div>
                </div>

                @RenderBody()

                @* Example product grid fallback when RenderBody is empty (helpful for preview) *@
                @if (ViewBag.SkipDefaultGrid == null)
                {
                    var products = ViewBag.LayoutProducts as IEnumerable<dynamic>;
                    if (products != null && products.Any())
                    {
                        <div class="row g-3">
                            @foreach (var p in products)
                            {
                                <div class="col-6 col-sm-4 col-md-3">
                                    <div class="product-card text-center">
                                        <div class="position-relative mb-2">
                                            <span class="badge-sale position-absolute" style="top:.6rem;left:.6rem">Sale</span>
                                            <a asp-controller="Product" asp-action="Details" asp-route-id="@p.Id">
                                                <img src="@((p.Thumbnail ?? "/images/product-placeholder.png"))" alt="product" class="img-fluid" style="height:120px;object-fit:contain" />
                                            </a>
                                        </div>
                                        <div class="small fw-semibold">
                                            <a asp-controller="Product" asp-action="Details" asp-route-id="@p.Id" class="text-decoration-none text-dark">@p.Name</a>
                                        </div>
                                        <div class="small text-muted">@((p.BrandName ?? ""))</div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="row g-3">
                           
                                <div class="col-6 col-sm-4 col-md-3">
                                    <div class="product-card text-center">
                                        <div>
                                            @await Component.InvokeAsync("FeaturedProducts")
                                        </div>
                                    </div>
                                </div>
                            
                        </div>
                    }
                }
            </section>
        </div>
    </main>

    <footer>
        <div class="footer-cta">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <h5>Welcome</h5>
                        <p>Shop the best fishing gear. Free shipping on orders over $99.</p>
                    </div>
                    <div class="col-md-2">
                        <h6>Tag Clouds</h6>
                        <ul class="list-unstyled small">
                            <li>Rods</li>
                            <li>Reels</li>
                            <li>Lines</li>
                        </ul>
                    </div>
                    <div class="col-md-3">
                        <h6>Key Links</h6>
                        <ul class="list-unstyled small">
                            <li><a class="text-white" asp-controller="Home" asp-action="Index">Home</a></li>
                            <li><a class="text-white" asp-controller="Product" asp-action="Index">Shop</a></li>
                        </ul>
                    </div>
                    <div class="col-md-3">
                        <h6>Useful Links</h6>
                        <ul class="list-unstyled small">
                            <li><a class="text-white" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                            <li><a class="text-white" asp-controller="Home" asp-action="Contact">Contact</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-dark text-light py-2">
            <div class="container d-flex justify-content-between small">
                <div>&copy; @DateTime.UtcNow.Year - NT.WEB</div>
                <div>Developed by Your Team</div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        (function(){
            const input = document.getElementById('global-search');
            const box = document.getElementById('global-suggest');
            if(!input || !box) return;
            let timer = null;
            const currency = n => {
                try{ return new Intl.NumberFormat('vi-VN',{style:'currency',currency:'VND',maximumFractionDigits:0}).format(n);}catch{return n;}
            };
            const hide = () => { box.style.display='none'; box.innerHTML=''; };
            const show = items => {
                if(!items || items.length===0){ hide(); return; }
                box.innerHTML = items.map(i => `
                    <a href="/Product/ProductDetailIndex/${i.id}" class="list-group-item list-group-item-action d-flex align-items-center">
                        <img src="${i.thumbnail || '/images/product-placeholder.png'}" class="me-2" style="width:40px;height:40px;object-fit:cover;border-radius:4px" alt="thumb"/>
                        <div class="flex-grow-1">
                            <div class="fw-semibold">${i.name} <small class="text-muted">${i.productCode ? '('+i.productCode+')' : ''}</small></div>
                            <div class="small text-muted">${i.priceMin?currency(i.priceMin):''}${i.priceMax?(' - '+currency(i.priceMax)) : ''}</div>
                        </div>
                    </a>`).join('');
                box.style.display='block';
            };
            input.addEventListener('input', function(){
                const q = this.value.trim();
                if(timer) clearTimeout(timer);
                if(q.length<1){ hide(); return; }
                timer = setTimeout(async ()=>{
                    try{
                        const res = await fetch(`/Product/Suggest?q=${encodeURIComponent(q)}`);
                        if(!res.ok){ hide(); return; }
                        const data = await res.json();
                        show(data);
                    }catch{ hide(); }
                }, 250);
            });
            document.addEventListener('click', e => { if(!box.contains(e.target) && e.target !== input) hide(); });
        })();
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
