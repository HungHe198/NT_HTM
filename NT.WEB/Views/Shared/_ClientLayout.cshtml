@{
    Layout = null;
    var title = ViewData["Title"] ?? "NT.WEB";
    // Product cards data is prepared in HomeController.Index and passed via ViewBag.ClientLayoutProducts.
}
@inject NT.WEB.Services.ProductWebService ProductService
@inject NT.WEB.Services.ProductDetailWebService ProductDetailService
@inject NT.WEB.Services.BrandWebService BrandService
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - NT.WEB</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)

    <style>
        html, body { height: 100%; }
        body { background: #f5f7fb; display: flex; flex-direction: column; min-height: 100vh; }
        .topbar { background: #fff; border-bottom: 1px solid #e6eef9; }
        .site-logo { color:#00bcd4; font-weight:700; display:flex; align-items:center; gap:.5rem; }
        .site-logo img { background: none; display:block; height:48px; width:auto; }
        .footer-cta { background:#00b8d4; color:#fff; padding:2rem 1rem; }
        main { flex: 1 0 auto; }
        footer { margin-top: auto; }
    </style>
</head>
@using System.Security.Claims
@{
    var isAuth = User?.Identity?.IsAuthenticated ?? false;
    var userId = isAuth ? User?.FindFirst(ClaimTypes.NameIdentifier)?.Value : null;
    var role = isAuth ? User?.FindFirst(ClaimTypes.Role)?.Value : null;
    var fullName = isAuth ? User?.FindFirst("Fullname")?.Value : null;
    var userName = isAuth ? User?.FindFirst(ClaimTypes.Name)?.Value : null;
}
<body data-auth="@isAuth" data-userid="@userId" data-role="@role">
    <header class="topbar">
        <nav class="navbar navbar-expand-lg container">
            <a class="navbar-brand site-logo" asp-controller="Home" asp-action="Index">
                <img src="~/css/Gemini_Generated_Image_7h114z7h114z7h11.png" alt="Logo" />
                <span>Fishing Shop</span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <div class="d-flex align-items-center w-100">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="GetAllProducts">Sản phẩm</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Privacy">Chính sách</a></li>
                    </ul>

                    <form class="d-flex position-relative mx-auto flex-grow-1" role="search" method="get" asp-controller="Product" asp-action="Index" autocomplete="off" style="max-width: 680px;">
                        <input id="client-search" class="form-control form-control-sm me-2 w-100" type="search" name="q" placeholder="Tìm kiếm sản phẩm..." />
                        <button class="btn btn-sm btn-outline-primary" type="submit"><i class="fa fa-search"></i></button>
                        <div id="client-suggest" class="list-group position-absolute w-100" style="top:100%;left:0;max-height:420px;overflow:auto;display:none;z-index:1050"></div>
                    </form>

                    <div class="d-flex align-items-center ms-auto">
                        @{
                            var errorMsg = TempData["Error"] as string;
                            var hasAnyMsg = !string.IsNullOrWhiteSpace(errorMsg);
                        }
                        <div class="dropdown me-3">
                            <button class="btn btn-sm btn-outline-secondary position-relative" type="button" data-bs-toggle="dropdown" aria-expanded="false" title="Thông báo">
                                <i class="fa fa-bell"></i>
                                @if (hasAnyMsg)
                                {
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">!</span>
                                }
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end p-0" style="min-width: 320px;">
                                <li class="p-2 border-bottom fw-semibold">Thông báo lỗi</li>
                                @if (hasAnyMsg)
                                {
                                    <li><div class="px-3 py-2 small text-danger">@errorMsg</div></li>
                                }
                                else
                                {
                                    <li><div class="px-3 py-2 small text-muted">Không có lỗi</div></li>
                                }
                            </ul>
                        </div>
                      @*   <a class="me-3 text-muted" href="#"><i class="fa fa-heart"></i></a> *@
                        @await Component.InvokeAsync("CartSummary")
                        @if (isAuth)
                        {
                            <span class="nav-link text-muted small me-2">Xin chào: @(string.IsNullOrWhiteSpace(fullName) ? (string.IsNullOrWhiteSpace(userName) ? userId : userName) : fullName)</span>
                            <a class="nav-link" asp-controller="Account" asp-action="Logout">Đăng xuất</a>
                        }
                        else
                        {
                            <a class="nav-link" asp-controller="Account" asp-action="Login" asp-route-client="true">Đăng nhập</a>
                            <a class="nav-link" asp-controller="Account" asp-action="RegisterCustomer" asp-route-client="true">Đăng ký</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main class="container my-4">
        @{
            var products = ViewBag.ClientLayoutProducts as IEnumerable<dynamic>;
        }
        @if (products != null && products.Any())
        {
            <div class="row g-3 mb-4">
                @foreach (var p in products)
                {
                    <div class="col-6 col-sm-4 col-md-3">
                        <div class="card h-100">
                            <a asp-controller="Product" asp-action="ProductDetailIndex" asp-route-id="@p.Id" class="text-decoration-none">
                                <img src="@((p.Thumbnail ?? "/images/product-placeholder.png"))" class="card-img-top" alt="product" style="height:140px;object-fit:contain" />
                            </a>
                            <div class="card-body p-2">
                                <div class="small fw-semibold text-dark mb-1">
                                    <a asp-controller="Product" asp-action="ProductDetailIndex" asp-route-id="@p.Id" class="text-decoration-none text-dark">@p.Name</a>
                                </div>
                                <div class="small text-muted">@p.BrandName</div>
                                <div class="small fw-semibold text-primary mt-1">@((p.Price != null) ? string.Format(System.Globalization.CultureInfo.GetCultureInfo("vi-VN"), "{0:C0}", p.Price) : "Liên hệ")</div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        @RenderBody()
    </main>

    <footer>
        <div class="footer-cta">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <h5>Chào mừng</h5>
                        <p>Mua sắm đồ câu tốt nhất. Miễn phí vận chuyển với đơn trên 2.000.000đ.</p>
                    </div>
                    <div class="col-md-2">
                        <h6>Tag Clouds</h6>
                        <ul class="list-unstyled small">
                            <li>Rods</li>
                            <li>Reels</li>
                            <li>Lines</li>
                        </ul>
                    </div>
                    <div class="col-md-3">
                        <h6>Liên kết chính</h6>
                        <ul class="list-unstyled small">
                            <li><a class="text-white" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                            <li><a class="text-white" asp-controller="Product" asp-action="Index">Sản phẩm</a></li>
                        </ul>
                    </div>
                    <div class="col-md-3">
                        <h6>Liên kết hữu ích</h6>
                        <ul class="list-unstyled small">
                            <li><a class="text-white" asp-controller="Home" asp-action="Privacy">Chính sách</a></li>
                            <li><a class="text-white" asp-controller="Home" asp-action="Contact">Liên hệ</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-dark text-light py-2">
            <div class="container d-flex justify-content-between small">
                <div>&copy; @DateTime.UtcNow.Year - NT.WEB</div>
                <div>Developed by Your Team</div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        (function(){
            const input = document.getElementById('client-search');
            const box = document.getElementById('client-suggest');
            if(!input || !box) return;
            let timer = null;
            const currency = n => { try { return new Intl.NumberFormat('vi-VN',{style:'currency',currency:'VND',maximumFractionDigits:0}).format(n); } catch { return n; } };
            const hide = () => { box.style.display='none'; box.innerHTML=''; };
            const show = items => {
                if(!items || items.length===0){ hide(); return; }
                box.innerHTML = items.map(i => `
                    <a href="/Product/ProductDetailIndex/${i.id}" class="list-group-item list-group-item-action d-flex align-items-center">
                        <img src="${i.thumbnail || '/images/product-placeholder.png'}" class="me-2" style="width:40px;height:40px;object-fit:cover;border-radius:4px" alt="thumb"/>
                        <div class="flex-grow-1">
                            <div class="fw-semibold">${i.name} <small class="text-muted">${i.productCode ? '('+i.productCode+')' : ''}</small></div>
                            <div class="small text-muted">${i.priceMin?currency(i.priceMin):''}${i.priceMax?(' - '+currency(i.priceMax)) : ''}</div>
                        </div>
                    </a>`).join('');
                box.style.display='block';
            };
            input.addEventListener('input', function(){
                const q = this.value.trim();
                if(timer) clearTimeout(timer);
                if(q.length < 1){ hide(); return; }
                timer = setTimeout(async ()=>{
                    try{
                        const res = await fetch(`/Product/Suggest?q=${encodeURIComponent(q)}`);
                        if(!res.ok){ hide(); return; }
                        const data = await res.json();
                        show(data);
                    }catch{ hide(); }
                }, 250);
            });
            document.addEventListener('click', e => { if(!box.contains(e.target) && e.target !== input) hide(); });
        })();

        // Simple client-side 30-minute session window starting after login/register
        (function(){
            const body = document.body;
            const isAuth = body.getAttribute('data-auth') === 'True' || body.getAttribute('data-auth') === 'true';
            const userId = body.getAttribute('data-userid');

            // Only track when authenticated and we have a UserId
            if(!isAuth || !userId) {
                // Clear any previous session tracking when not authenticated
                sessionStorage.removeItem('clientSessionStart');
                sessionStorage.removeItem('clientSessionExpiry');
                return;
            }

            const DURATION_MS = 30 * 60 * 1000; // 30 minutes
            let start = Number(sessionStorage.getItem('clientSessionStart'));
            let expiry = Number(sessionStorage.getItem('clientSessionExpiry'));

            if(!start || !expiry) {
                start = Date.now();
                expiry = start + DURATION_MS;
                sessionStorage.setItem('clientSessionStart', String(start));
                sessionStorage.setItem('clientSessionExpiry', String(expiry));
            }

            const check = () => {
                const exp = Number(sessionStorage.getItem('clientSessionExpiry')) || 0;
                if(Date.now() >= exp) {
                    // Clear tracking and force re-login
                    sessionStorage.removeItem('clientSessionStart');
                    sessionStorage.removeItem('clientSessionExpiry');
                    const returnUrl = encodeURIComponent(window.location.pathname + window.location.search);
                    window.location.href = `/Account/Login?client=true&returnUrl=${returnUrl}`;
                }
            };

            // Check every 30s
            setInterval(check, 30 * 1000);
        })();
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
