@model NT.SHARED.Models.Brand

@{
    ViewData["Title"] = "Xóa nhà sản xuất";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Nhà Sản Xuất</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Xóa</li>
                </ol>
            </nav>
            <h2><i class="fas fa-building me-2 text-danger"></i>Xóa Nhà Sản Xuất</h2>
            <p class="text-muted">Bạn sắp xóa nhà sản xuất. Hành động này không thể hoàn tác.</p>
        </div>
        <div class="col-auto align-self-start">
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Quay lại</a>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-light">
                    <h5 class="mb-0 text-danger">Xác nhận xóa</h5>
                </div>
                <div class="card-body">
                    <p class="text-danger fw-semibold">Bạn chắc chắn muốn xóa nhà sản xuất này?</p>

                    <dl class="row">
                        <dt class="col-sm-4 text-muted">Tên</dt>
                        <dd class="col-sm-8"><strong>@Model.Name</strong></dd>

                        <dt class="col-sm-4 text-muted">Website</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrWhiteSpace(Model.Website))
                            {
                                var url = Model.Website.StartsWith("http", StringComparison.OrdinalIgnoreCase) ? Model.Website : $"https://{Model.Website}";
                                <a href="@url" target="_blank" rel="noopener">@Model.Website</a>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </dd>

                        <dt class="col-sm-4 text-muted">ID</dt>
                        <dd class="col-sm-8">@Model.Id</dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm sticky-top" style="top:20px;">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <div class="fs-5 fw-bold">@Model.Name</div>
                        <div class="text-muted">Nhà sản xuất</div>
                    </div>

                    <div class="mb-3">
                        <span class="badge bg-danger fs-6">Xóa vĩnh viễn</span>
                    </div>

                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Xác nhận xóa nhà sản xuất này?');" class="w-100">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger btn-sm w-100 mb-2">Xác nhận xóa</button>
                    </form>

                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm w-100">Hủy</a>

                    <hr />

                    <div class="text-start mt-3">
                        <small class="text-muted">Thông tin nhanh</small>
                        <ul class="list-unstyled mt-2 mb-0">
                            <li><strong>Tên:</strong> @Model.Name</li>
                            <li><strong>Website:</strong> @(string.IsNullOrWhiteSpace(Model.Website) ? "-" : Model.Website)</li>
                            <li><strong>ID:</strong> @Model.Id</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
