@using System.Linq
@using System
@model IEnumerable<NT.SHARED.Models.Brand>

@{
    ViewBag.Title = "Brands";
    var list = Model ?? Enumerable.Empty<NT.SHARED.Models.Brand>();
    var totalCount = list.Count();
    var withWebsite = list.Count(b => !string.IsNullOrWhiteSpace(b.Website));
    var withoutWebsite = totalCount - withWebsite;
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Nhà Sản Xuất</li>
                </ol>
            </nav>
            <h2>Nhà Sản Xuất</h2>
        </div>
        <div class="col-auto align-self-start">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i> Thêm Nhà Sản Xuất
            </a>
        </div>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex align-items-center gap-3">
                    <div class="icon-box" style="width:56px;height:56px;border-radius:12px;background:linear-gradient(135deg,#00bcd4,#00838f);color:white;display:flex;align-items:center;justify-content:center;font-size:22px;">
                        <i class="fas fa-building"></i>
                    </div>
                    <div>
                        <div class="text-muted small">Tổng nhà sản xuất</div>
                        <div class="fw-bold fs-4">@totalCount</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex align-items-center gap-3">
                    <div class="icon-box" style="width:56px;height:56px;border-radius:12px;background:linear-gradient(135deg,#28a745,#10b981);color:white;display:flex;align-items:center;justify-content:center;font-size:22px;">
                        <i class="fas fa-link"></i>
                    </div>
                    <div>
                        <div class="text-muted small">Có website</div>
                        <div class="fw-bold fs-4 text-success">@withWebsite</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex align-items-center gap-3">
                    <div class="icon-box" style="width:56px;height:56px;border-radius:12px;background:linear-gradient(135deg,#f44336,#e53935);color:white;display:flex;align-items:center;justify-content:center;font-size:22px;">
                        <i class="fas fa-ban"></i>
                    </div>
                    <div>
                        <div class="text-muted small">Chưa có website</div>
                        <div class="fw-bold fs-4 text-danger">@withoutWebsite</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Danh sách Nhà Sản Xuất</h5>
            <small class="text-muted">@totalCount nhà sản xuất</small>
        </div>
        <div class="card-body">
            <form method="get" class="mb-3" role="search">
                <div class="input-group">
                    <input type="text" name="q" value="@Context.Request.Query["q"].ToString()" class="form-control" placeholder="Tìm theo tên..." aria-label="Tìm theo tên" />
                    <button class="btn btn-outline-secondary" type="submit">Tìm</button>
                    <a class="btn btn-light ms-2" href="@Url.Action("Index")">Xóa</a>
                </div>
            </form>

            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th style="width:45%">Tên</th>
                            <th style="width:35%">Website</th>
                            <th style="width:20%" class="text-end">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var b in list)
                        {
                            var url = b.Website;
                            if (!string.IsNullOrWhiteSpace(url) && !url.StartsWith("http", StringComparison.OrdinalIgnoreCase))
                            {
                                url = $"https://{url}";
                            }

                            var display = b.Website;
                            try { display = !string.IsNullOrWhiteSpace(url) ? new Uri(url).Host : ""; } catch { display = b.Website; }

                            <tr>
                                <td class="fw-semibold">@b.Name</td>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(b.Website))
                                    {
                                        <a href="@url" target="_blank" rel="noopener" title="@b.Website" class="text-decoration-none d-inline-block text-truncate" style="max-width:360px;">@display</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a asp-action="Details" asp-route-id="@b.Id" class="btn btn-sm btn-outline-secondary me-1">Chi tiết</a>
                                    <a asp-action="Edit" asp-route-id="@b.Id" class="btn btn-sm btn-outline-primary me-1">Sửa</a>
                                    <a asp-action="Delete" asp-route-id="@b.Id" class="btn btn-sm btn-outline-danger">Xóa</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
