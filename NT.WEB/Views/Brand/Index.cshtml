@model IEnumerable<NT.SHARED.Models.Brand>

@{
    ViewBag.Title = "Brands";
}

<h1>Brands</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Brand</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Website</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach(var b in Model)
    {
        <tr>
            <td>@b.Name</td>
            <td>@b.Website</td>
            <td>
                <a asp-action="Details" asp-route-id="@b.Id">Details</a> |
                <a asp-action="Edit" asp-route-id="@b.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@b.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>