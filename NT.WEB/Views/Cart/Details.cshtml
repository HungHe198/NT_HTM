@model NT.SHARED.Models.Cart

<h2>Chi tiết giỏ hàng</h2>
<dl class="row">
    <dt class="col-sm-2">Mã khách hàng</dt>
    <dd class="col-sm-10">@Model.CustomerId</dd>
    <dt class="col-sm-2">Ngày tạo</dt>
    <dd class="col-sm-10">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
</dl>
<p>
    <a asp-action="Edit" asp-route-id="@Model.Id">Sửa</a> |
    <a asp-action="Index">Quay lại danh sách</a>
</p>
