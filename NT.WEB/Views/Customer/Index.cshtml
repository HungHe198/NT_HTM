@model IEnumerable<NT.SHARED.Models.Customer>

@{
    ViewData["Title"] = "Quản lý khách hàng";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col">
            <h2><i class="fas fa-users me-2"></i>Quản lý khách hàng</h2>
            <p class="text-muted">Tổng: <strong>@(Model?.Count() ?? 0)</strong> khách hàng</p>
        </div>
        <div class="col-auto">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i> Thêm khách hàng mới
            </a>
        </div>
    </div>

    <!-- Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Search -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" asp-action="Index" class="position-relative">
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-search"></i></span>
                    <input type="text" id="customer-search" name="q" class="form-control" 
                           placeholder="Tìm kiếm theo tên, email, số điện thoại..." autocomplete="off" />
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="fas fa-search me-1"></i> Tìm kiếm
                    </button>
                </div>
                <!-- Suggestions Dropdown -->
                <div id="suggestions" class="list-group position-absolute shadow"
                     style="z-index: 1000; width: 100%; left: 0; top: 48px; display: none; max-height: 400px; overflow-y: auto;">
                </div>
            </form>
        </div>
    </div>

    <!-- Customers Table -->
    <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex align-items-center justify-content-between">
            <h5 class="mb-0"><i class="fas fa-list me-2"></i>Danh sách Khách hàng</h5>
            <span class="badge bg-light text-primary">@(Model?.Count() ?? 0) khách hàng</span>
        </div>
        <div class="card-body p-0">
            @if (!(Model?.Any() ?? false))
            {
                <div class="text-center py-5 text-muted">
                    <i class="fas fa-inbox fa-3x mb-3 opacity-25"></i>
                    <p>Chưa có khách hàng</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 5%;">#</th>
                                <th style="width: 25%;">Khách hàng</th>
                                <th style="width: 20%;">Email</th>
                                <th style="width: 15%;">Số điện thoại</th>
                                <th style="width: 10%;">Ngày sinh</th>
                                <th style="width: 10%;">Giới tính</th>
                                <th style="width: 15%;" class="text-center">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ var index = 1; }
                            @foreach (var customer in Model)
                            {
                                <tr>
                                    <td class="text-muted">@(index++)</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-circle me-2" style="width: 40px; height: 40px; border-radius: 50%; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); display: flex; align-items: center; justify-content: center; color: white; font-weight: bold;">
                                                @(string.IsNullOrEmpty(customer.User?.Fullname) ? "?" : customer.User.Fullname[0].ToString().ToUpper())
                                            </div>
                                            <div>
                                                <strong>@(customer.User?.Fullname ?? "N/A")</strong>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrWhiteSpace(customer.User?.Email))
                                        {
                                            <a href="mailto:@customer.User.Email">@customer.User.Email</a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrWhiteSpace(customer.User?.PhoneNumber))
                                        {
                                            <a href="tel:@customer.User.PhoneNumber">@customer.User.PhoneNumber</a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (customer.DoB.HasValue)
                                        {
                                            @customer.DoB.Value.ToString("dd/MM/yyyy")
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrWhiteSpace(customer.Gender))
                                        {
                                            <span class="badge bg-info">@customer.Gender</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Details" asp-route-id="@customer.Id" class="btn btn-outline-info" title="Chi tiết">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@customer.Id" class="btn btn-outline-primary" title="Sửa">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button class="btn btn-outline-danger" type="button"
                                                    data-bs-toggle="modal" data-bs-target="#deleteModal-@customer.Id" title="Xóa">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>

                                <!-- Delete Modal -->
                                <div class="modal fade" id="deleteModal-@customer.Id" tabindex="-1" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-header bg-danger text-white">
                                                <h5 class="modal-title">Xác nhận xóa</h5>
                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p>Bạn có chắc muốn xóa khách hàng <strong>@(customer.User?.Fullname ?? "N/A")</strong>?</p>
                                                <p class="text-muted small">Email: <strong>@(customer.User?.Email ?? "N/A")</strong></p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                                <form asp-action="Delete" asp-route-id="@customer.Id" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-danger">Xóa</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            const input = document.getElementById('customer-search');
            const box = document.getElementById('suggestions');
            let timer = null;

            function hide() {
                box.style.display = 'none';
                box.innerHTML = '';
            }

            function show(items) {
                if (!items || items.length === 0) {
                    hide();
                    return;
                }
                box.innerHTML = items.map(i => `
                    <a href="/Customer/Details/${i.id}" class="list-group-item list-group-item-action d-flex align-items-center gap-2 border-0 py-2">
                        <div class="flex-grow-1">
                            <div class="fw-semibold small">${i.fullname || 'N/A'}</div>
                            <div class="small text-muted">${i.email || 'N/A'} | ${i.phoneNumber || 'N/A'}</div>
                        </div>
                    </a>
                `).join('');
                box.style.display = 'block';
            }

            input.addEventListener('input', function () {
                const q = this.value.trim();
                if (timer) clearTimeout(timer);
                if (q.length < 1) {
                    hide();
                    return;
                }
                timer = setTimeout(async () => {
                    try {
                        const res = await fetch(`/Customer/Suggest?q=${encodeURIComponent(q)}`);
                        if (!res.ok) {
                            hide();
                            return;
                        }
                        const data = await res.json();
                        show(data);
                    } catch (e) {
                        hide();
                    }
                }, 250);
            });

            document.addEventListener('click', function (e) {
                if (!box.contains(e.target) && e.target !== input) hide();
            });
        })();
    </script>
}
