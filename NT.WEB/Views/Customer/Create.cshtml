@model NT.SHARED.Models.Customer

<h2>Thêm mới khách hàng</h2>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="UserId">Mã người dùng</label>
        @if (Model != null && Model.UserId != Guid.Empty)
        {
            <div class="alert alert-info" role="alert">
                @(Model?.User?.Fullname ?? (ViewBag.FullName as string) ?? string.Empty) Vui lòng điền các thông tin cần thiết.
            </div>
            <input type="hidden" asp-for="UserId" />
        }
        else
        {
            <input asp-for="UserId" class="form-control" />
        }
    </div>
    <div class="form-group">
        <label asp-for="Address">Địa chỉ</label>
        <input asp-for="Address" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DoB">Ngày sinh</label>
        <input asp-for="DoB" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Gender">Giới tính</label>
        <input asp-for="Gender" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
