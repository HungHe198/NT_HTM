@model NT.SHARED.Models.Customer

@{
    ViewData["Title"] = "Chi tiết khách hàng";
    var isActive = Model.User?.Status == "1" || Model.User?.Status == "Active";
}

<div class="container-fluid">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Quản lý khách hàng</a></li>
            <li class="breadcrumb-item active" aria-current="page">@(Model.User?.Fullname ?? "Chi tiết")</li>
        </ol>
    </nav>

    <div class="row g-4">
        <!-- Main Info -->
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-user me-2"></i>Thông tin khách hàng</h5>
                    <span class="badge @(isActive ? "bg-success" : "bg-secondary") fs-6">
                        @(isActive ? "Hoạt động" : "Vô hiệu")
                    </span>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <label class="form-label text-muted small">Họ và tên</label>
                            <p class="fs-5 fw-bold">@(Model.User?.Fullname ?? "N/A")</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted small">Email</label>
                            <p class="fs-5">
                                @if (!string.IsNullOrWhiteSpace(Model.User?.Email))
                                {
                                    <a href="mailto:@Model.User.Email"><i class="fas fa-envelope me-2 text-info"></i>@Model.User.Email</a>
                                }
                                else
                                {
                                    <span class="text-muted">Chưa cập nhật</span>
                                }
                            </p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted small">Số điện thoại</label>
                            <p class="fs-5">
                                @if (!string.IsNullOrWhiteSpace(Model.User?.PhoneNumber))
                                {
                                    <a href="tel:@Model.User.PhoneNumber"><i class="fas fa-phone me-2 text-success"></i>@Model.User.PhoneNumber</a>
                                }
                                else
                                {
                                    <span class="text-muted">Chưa cập nhật</span>
                                }
                            </p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted small">Ngày sinh</label>
                            <p class="fs-5">
                                @if (Model.DoB.HasValue)
                                {
                                    <i class="fas fa-birthday-cake me-2 text-warning"></i>@Model.DoB.Value.ToString("dd/MM/yyyy")
                                }
                                else
                                {
                                    <span class="text-muted">Chưa cập nhật</span>
                                }
                            </p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted small">Giới tính</label>
                            <p>
                                @if (!string.IsNullOrWhiteSpace(Model.Gender))
                                {
                                    <span class="badge bg-info fs-6">@Model.Gender</span>
                                }
                                else
                                {
                                    <span class="text-muted">Chưa cập nhật</span>
                                }
                            </p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted small">Vai trò</label>
                            <p>
                                <span class="badge bg-info fs-6">
                                    <i class="fas fa-user me-1"></i>@(Model.User?.Role?.Name ?? "Customer")
                                </span>
                            </p>
                        </div>
                    </div>

                    <!-- Address Section -->
                    <div class="mt-4 pt-4 border-top">
                        <h6 class="fw-bold text-primary mb-3"><i class="fas fa-map-marker-alt me-2"></i>Địa chỉ</h6>
                        <p class="fs-5">
                            @if (!string.IsNullOrWhiteSpace(Model.Address))
                            {
                                @Model.Address
                            }
                            else
                            {
                                <span class="text-muted">Chưa cập nhật</span>
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Avatar & Quick Info -->
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <div class="avatar-circle mx-auto mb-3" style="width: 100px; height: 100px; border-radius: 50%; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); display: flex; align-items: center; justify-content: center; color: white; font-weight: bold; font-size: 2.5rem;">
                        @(string.IsNullOrEmpty(Model.User?.Fullname) ? "?" : Model.User.Fullname[0].ToString().ToUpper())
                    </div>
                    <h4>@(Model.User?.Fullname ?? "N/A")</h4>
                    <p class="text-muted">@(Model.User?.Email ?? "")</p>

                    <hr />

                    <div class="text-start">
                        <div class="mb-2">
                            <small class="text-muted">Mã khách hàng:</small><br />
                            <code class="small">@Model.Id</code>
                        </div>
                        <div class="mb-2">
                            <small class="text-muted">Mã người dùng:</small><br />
                            <code class="small">@Model.UserId</code>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="card shadow-sm mt-3">
                <div class="card-body d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="fas fa-edit me-1"></i> Chỉnh sửa
                    </a>
                    <button class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                        <i class="fas fa-trash me-1"></i> Xóa khách hàng
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Quay lại
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Xác nhận xóa</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc muốn xóa khách hàng <strong>@(Model.User?.Fullname ?? "N/A")</strong>?</p>
                <p class="text-muted small">Email: <strong>@(Model.User?.Email ?? "N/A")</strong></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Xóa</button>
                </form>
            </div>
        </div>
    </div>
</div>
