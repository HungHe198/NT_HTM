@using NT.SHARED.Models
@model IEnumerable<dynamic>
@inject NT.WEB.Services.BrandWebService BrandService
@inject NT.WEB.Services.ProductDetailWebService ProductDetailService
@{
    ViewData["Title"] = "Sản phẩm";
    var qVal = Context.Request.Query["q"].ToString();
    var brandVal = Context.Request.Query["brandId"].ToString();
    var categoryVal = Context.Request.Query["categoryId"].ToString();

    var brands = await BrandService.GetAllAsync();
    var brandOptions = brands?.OrderBy(b => b.Name).ToList() ?? new List<Brand>();

    // Build category GUID options from product details
    var categoryIds = new HashSet<Guid>();
    foreach (var p in Model ?? Enumerable.Empty<dynamic>())
    {
        try
        {
            var details = await ProductDetailService.GetWithLookupsByProductIdAsync((Guid)p.id);
            foreach (var d in details ?? Enumerable.Empty<NT.SHARED.Models.ProductDetail>())
            {
                var catProp = d.GetType().GetProperty("CategoryId");
                if (catProp != null)
                {
                    var val = catProp.GetValue(d);
                    if (val is Guid g && g != Guid.Empty) categoryIds.Add(g);
                }
                else
                {
                    var catsProp = d.GetType().GetProperty("Categories");
                    var cats = catsProp?.GetValue(d) as IEnumerable<Guid>;
                    if (cats != null)
                    {
                        foreach (var g in cats) if (g != Guid.Empty) categoryIds.Add(g);
                    }
                }
            }
        }
        catch { }
    }
    var categoryOptions = categoryIds.OrderBy(x => x).ToList();
    var productCount = (Model ?? Enumerable.Empty<dynamic>()).Count();
}

@section Styles {
<style>
    .products-page {
        min-height: 100vh;
    }
    
    /* Page Header */
    .page-header {
        background: linear-gradient(135deg, #00838f, #00bcd4);
        border-radius: 20px;
        padding: 2rem;
        margin-bottom: 2rem;
        color: white;
        box-shadow: 0 8px 30px rgba(0, 131, 143, 0.3);
    }
    
    .page-header h1 {
        font-weight: 700;
        margin-bottom: 0.5rem;
    }
    
    .page-header p {
        opacity: 0.9;
        margin-bottom: 0;
    }
    
    .product-count-badge {
        background: rgba(255, 255, 255, 0.2);
        padding: 8px 20px;
        border-radius: 25px;
        font-weight: 600;
    }
    
    /* Filter Card */
    .filter-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        padding: 1.5rem;
        margin-bottom: 2rem;
        border: 1px solid #e0f7fa;
    }
    
    .filter-title {
        font-weight: 700;
        color: #00838f;
        margin-bottom: 1.25rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .filter-label {
        font-weight: 600;
        color: #37474f;
        font-size: 0.85rem;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.4rem;
    }
    
    .filter-input {
        border-radius: 12px !important;
        border: 2px solid #e0e0e0 !important;
        padding: 10px 14px !important;
        transition: all 0.3s ease !important;
        font-size: 0.9rem !important;
    }
    
    .filter-input:focus {
        border-color: #00bcd4 !important;
        box-shadow: 0 0 0 3px rgba(0, 188, 212, 0.15) !important;
    }
    
    .filter-btn {
        padding: 10px 24px;
        border-radius: 25px;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    
    .filter-btn-primary {
        background: linear-gradient(135deg, #00838f, #00bcd4);
        border: none;
        color: white;
        box-shadow: 0 4px 15px rgba(0, 131, 143, 0.3);
    }
    
    .filter-btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(0, 131, 143, 0.4);
        background: linear-gradient(135deg, #006064, #00838f);
        color: white;
    }
    
    .filter-btn-secondary {
        background: white;
        border: 2px solid #e0e0e0;
        color: #78909c;
    }
    
    .filter-btn-secondary:hover {
        border-color: #00bcd4;
        color: #00838f;
        background: #e0f7fa;
    }
    
    /* Products Grid */
    .products-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
        gap: 1.5rem;
    }
    
    /* Product Card - matching _ClientLayout style */
    .product-card-item {
        background: white;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        border: none;
        height: 100%;
        display: flex;
        flex-direction: column;
    }
    
    .product-card-item:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
    }
    
    .product-card-item .card-img-wrapper {
        position: relative;
        overflow: hidden;
        background: linear-gradient(135deg, #f5f5f5, #fafafa);
    }
    
    .product-card-item .card-img-top {
        height: 200px;
        object-fit: contain;
        padding: 15px;
        transition: transform 0.4s ease;
    }
    
    .product-card-item:hover .card-img-top {
        transform: scale(1.08);
    }
    
    .product-card-item .quick-view {
        position: absolute;
        bottom: -50px;
        left: 50%;
        transform: translateX(-50%);
        background: linear-gradient(135deg, #00838f, #00bcd4);
        color: white;
        padding: 10px 24px;
        border-radius: 25px;
        font-size: 0.85rem;
        font-weight: 600;
        transition: all 0.3s ease;
        opacity: 0;
        white-space: nowrap;
    }
    
    .product-card-item:hover .quick-view {
        bottom: 15px;
        opacity: 1;
    }
    
    .product-card-item .quick-view:hover {
        background: linear-gradient(135deg, #006064, #00838f);
        color: white;
    }
    
    .product-card-item .card-body {
        padding: 1.25rem;
        flex: 1;
        display: flex;
        flex-direction: column;
    }
    
    .product-card-item .product-name {
        font-weight: 600;
        color: #263238;
        font-size: 1rem;
        line-height: 1.4;
        margin-bottom: 0.5rem;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        transition: color 0.3s ease;
    }
    
    .product-card-item .product-name:hover {
        color: #00838f;
    }
    
    .product-card-item .product-brand {
        color: #78909c;
        font-size: 0.85rem;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .product-card-item .product-code {
        background: #e0f7fa;
        color: #00838f;
        padding: 2px 8px;
        border-radius: 10px;
        font-size: 0.75rem;
        font-weight: 500;
    }
    
    .product-card-item .product-price {
        font-weight: 700;
        font-size: 1.1rem;
        background: linear-gradient(135deg, #00838f, #00bcd4);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-top: auto;
    }
    
    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background: white;
        border-radius: 20px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }
    
    .empty-state i {
        font-size: 4rem;
        color: #b0bec5;
        margin-bottom: 1.5rem;
    }
    
    .empty-state h3 {
        color: #546e7a;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }
    
    .empty-state p {
        color: #90a4ae;
    }
    
    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .page-header {
            padding: 1.5rem;
            text-align: center;
        }
        
        .page-header .d-flex {
            flex-direction: column;
            gap: 1rem;
        }
        
        .products-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 1rem;
        }
        
        .product-card-item .card-img-top {
            height: 150px;
        }
        
        .product-card-item .card-body {
            padding: 1rem;
        }
        
        .product-card-item .product-name {
            font-size: 0.9rem;
        }
        
        .product-card-item .product-price {
            font-size: 1rem;
        }
    }
</style>
}

<div class="products-page">
    <div class="container py-4">
        <!-- Page Header -->
        <div class="page-header">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                <div>
                    <h1><i class="fas fa-fish me-2"></i>Sản phẩm</h1>
                    <p>Khám phá bộ sưu tập cần câu chất lượng cao</p>
                </div>
                <div class="product-count-badge">
                    <i class="fas fa-box me-2"></i>@productCount sản phẩm
                </div>
            </div>
        </div>

        <!-- Filter Card -->
        <div class="filter-card">
            <h5 class="filter-title">
                <i class="fas fa-filter"></i> Bộ lọc tìm kiếm
            </h5>
            <form method="get" asp-controller="Home" asp-action="GetAllProducts">
                <div class="row g-3">
                    <div class="col-12 col-md-4">
                        <label for="q" class="filter-label">
                            <i class="fas fa-search text-muted"></i> Từ khóa
                        </label>
                        <input type="text" name="q" id="q" value="@qVal" 
                               class="form-control filter-input" 
                               placeholder="Tên hoặc mã sản phẩm..." />
                    </div>
                    <div class="col-6 col-md-2">
                        <label for="brandId" class="filter-label">
                            <i class="fas fa-tag text-muted"></i> Thương hiệu
                        </label>
                        <select name="brandId" id="brandId" class="form-select filter-input">
                            <option value="">-- Tất cả --</option>
                            @foreach (var b in brandOptions)
                            {
                                var val = (Guid)b.Id;
                                <option value="@val" selected="@(brandVal == val.ToString())">@b.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-6 col-md-2">
                        <label for="categoryId" class="filter-label">
                            <i class="fas fa-list text-muted"></i> Danh mục
                        </label>
                        <select name="categoryId" id="categoryId" class="form-select filter-input">
                            <option value="">-- Tất cả --</option>
                            @foreach (var gid in categoryOptions)
                            {
                                <option value="@gid" selected="@(categoryVal == gid.ToString())">@gid</option>
                            }
                        </select>
                    </div>
                    <div class="col-6 col-md-2">
                        <label for="minPrice" class="filter-label">
                            <i class="fas fa-dollar-sign text-muted"></i> Giá từ
                        </label>
                        <input type="number" name="minPrice" id="minPrice" 
                               value="@Context.Request.Query["minPrice"]" 
                               class="form-control filter-input" 
                               min="0" step="1000" placeholder="0₫" />
                    </div>
                    <div class="col-6 col-md-2">
                        <label for="maxPrice" class="filter-label">
                            <i class="fas fa-dollar-sign text-muted"></i> Giá đến
                        </label>
                        <input type="number" name="maxPrice" id="maxPrice" 
                               value="@Context.Request.Query["maxPrice"]" 
                               class="form-control filter-input" 
                               min="0" step="1000" placeholder="∞" />
                    </div>
                    <div class="col-12">
                        <div class="d-flex gap-2 mt-2">
                            <button type="submit" class="btn filter-btn filter-btn-primary">
                                <i class="fas fa-search me-2"></i>Tìm kiếm
                            </button>
                            <a class="btn filter-btn filter-btn-secondary" asp-controller="Home" asp-action="GetAllProducts">
                                <i class="fas fa-times me-2"></i>Xóa lọc
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <!-- Products Grid -->
        @if (productCount > 0)
        {
            <div class="products-grid">
                @foreach (var p in Model ?? Enumerable.Empty<dynamic>())
                {
                    <div class="product-card-item">
                        <div class="card-img-wrapper">
                            <a asp-controller="Product" asp-action="ProductDetailIndex" asp-route-id="@p.id" class="text-decoration-none">
                                <img src="@((p.thumbnail ?? "/images/product-placeholder.png"))" class="card-img-top" alt="@p.name" />
                            </a>
                            <a asp-controller="Product" asp-action="ProductDetailIndex" asp-route-id="@p.id" class="quick-view text-decoration-none">
                                <i class="fas fa-eye me-1"></i> Xem chi tiết
                            </a>
                        </div>
                        <div class="card-body">
                            <a asp-controller="Product" asp-action="ProductDetailIndex" asp-route-id="@p.id" class="text-decoration-none">
                                <div class="product-name">@p.name</div>
                            </a>
                            <div class="product-brand">
                                <i class="fas fa-tag"></i>
                                <span>@p.brandName</span>
                                @if (!string.IsNullOrEmpty((string)p.productCode))
                                {
                                    <span class="product-code">@p.productCode</span>
                                }
                            </div>
                            <div class="product-price">
                                @if (p.priceMin != null || p.priceMax != null)
                                {
                                    @string.Format(System.Globalization.CultureInfo.GetCultureInfo("vi-VN"), "{0:C0}", p.priceMin ?? p.priceMax)
                                    @if (p.priceMin != null && p.priceMax != null && p.priceMin != p.priceMax)
                                    {
                                        <text> - </text>@string.Format(System.Globalization.CultureInfo.GetCultureInfo("vi-VN"), "{0:C0}", p.priceMax)
                                    }
                                }
                                else
                                {
                                    <text>Liên hệ</text>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-box-open"></i>
                <h3>Không tìm thấy sản phẩm</h3>
                <p>Thử thay đổi bộ lọc hoặc từ khóa tìm kiếm của bạn</p>
                <a class="btn filter-btn filter-btn-primary mt-3" asp-controller="Home" asp-action="GetAllProducts">
                    <i class="fas fa-redo me-2"></i>Xem tất cả sản phẩm
                </a>
            </div>
        }
    </div>
</div>
