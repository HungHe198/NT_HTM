<div class="products-page">
    <div class="container py-4">
        <!-- Page Header -->
        <div class="page-header">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                <div>
                    <h1><i class="fas fa-fish me-2"></i>Sản phẩm</h1>
                    <p>Khám phá bộ sưu tập cần câu chất lượng cao</p>
                </div>
                <div class="product-count-badge">
                    <i class="fas fa-box me-2"></i>@totalCount sản phẩm
                </div>
            </div>
        </div>

        <!-- Filter Card -->
        <div class="filter-card">
            <h5 class="filter-title">
                <i class="fas fa-filter"></i> Bộ lọc tìm kiếm
            </h5>
            
            @* Hiển thị thông báo warning nếu có *@
            @if (TempData["Warning"] != null)
            {
                <div class="alert alert-warning alert-dismissible fade show mb-3" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Warning"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            <form method="get" asp-controller="Home" asp-action="GetAllProducts" id="filterForm" novalidate>
                <div class="row g-3">
                    <div class="col-12 col-md-4">
                        <label for="q" class="filter-label">
                            <i class="fas fa-search text-muted"></i> Từ khóa
                        </label>
                        <input type="text" name="q" id="q" value="@qVal" 
                               class="form-control filter-input" 
                               placeholder="Tên hoặc mã sản phẩm..." />
                    </div>
                    <div class="col-6 col-md-2">
                        <label for="brandId" class="filter-label">
                            <i class="fas fa-tag text-muted"></i> Thương hiệu
                        </label>
                        <select name="brandId" id="brandId" class="form-select filter-input">
                            <option value="">-- Tất cả --</option>
                            @foreach (var b in brandOptions)
                            {
                                var val = (Guid)b.Id;
                                <option value="@val" selected="@(brandVal == val.ToString())">@b.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-6 col-md-2">
                        <label for="categoryId" class="filter-label">
                            <i class="fas fa-list text-muted"></i> Danh mục
                        </label>
                        <select name="categoryId" id="categoryId" class="form-select filter-input">
                            <option value="">-- Tất cả --</option>
                            @foreach (var gid in categoryOptions)
                            {
                                <option value="@gid" selected="@(categoryVal == gid.ToString())">@gid</option>
                            }
                        </select>
                    </div>
                    <div class="col-6 col-md-2">
                        <label for="minPrice" class="filter-label">
                            <i class="fas fa-dollar-sign text-muted"></i> Giá từ
                        </label>
                        <input type="number" name="minPrice" id="minPrice" 
                               value="@minPriceVal" 
                               class="form-control filter-input" 
                               min="0" step="1000" placeholder="0₫" />
                        <div class="price-error" id="minPriceError"></div>
                    </div>
                    <div class="col-6 col-md-2">
                        <label for="maxPrice" class="filter-label">
                            <i class="fas fa-dollar-sign text-muted"></i> Giá đến
                        </label>
                        <input type="number" name="maxPrice" id="maxPrice" 
                               value="@maxPriceVal" 
                               class="form-control filter-input" 
                               min="0" step="1000" placeholder="∞" />
                        <div class="price-error" id="maxPriceError"></div>
                    </div>
                    <div class="col-12">
                        <div class="price-error" id="priceRangeError"></div>
                        <div class="d-flex gap-2 mt-2">
                            <button type="submit" class="btn filter-btn filter-btn-primary" id="submitBtn">
                                <i class="fas fa-search me-2"></i>Tìm kiếm
                            </button>
                            <a class="btn filter-btn filter-btn-secondary" asp-controller="Home" asp-action="GetAllProducts">
                                <i class="fas fa-times me-2"></i>Xóa lọc
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <!-- Products Grid -->
        @if (matchedCount > 0)
        {
            @if (isPriceFiltering)
            {
                <div class="section-header">
                    <h3><i class="fas fa-check-circle me-2"></i>Sản phẩm phù hợp</h3>
                    <span class="badge">@matchedCount sản phẩm</span>
                </div>
            }
            
            <div class="products-grid">
                @foreach (var p in matchedProducts)
                {
                    <div class="product-card-item">
                        <div class="card-img-wrapper">
                            <a asp-controller="Product" asp-action="ProductDetailIndex" asp-route-id="@p.id" class="text-decoration-none">
                                <img src="@((p.thumbnail ?? "/images/product-placeholder.png"))" class="card-img-top" alt="@p.name" />
                            </a>
                            <a asp-controller="Product" asp-action="ProductDetailIndex" asp-route-id="@p.id" class="quick-view text-decoration-none">
                                <i class="fas fa-eye me-1"></i> Xem chi tiết
                            </a>
                        </div>
                        <div class="card-body">
                            <a asp-controller="Product" asp-action="ProductDetailIndex" asp-route-id="@p.id" class="text-decoration-none">
                                <div class="product-name">@p.name</div>
                            </a>
                            <div class="product-brand">
                                <i class="fas fa-tag"></i>
                                <span>@p.brandName</span>
                                @if (!string.IsNullOrEmpty((string)p.productCode))
                                {
                                    <span class="product-code">@p.productCode</span>
                                }
                            </div>
                            <div class="product-price">
                                @if (p.priceMin != null || p.priceMax != null)
                                {
                                    @string.Format(System.Globalization.CultureInfo.GetCultureInfo("vi-VN"), "{0:C0}", p.priceMin ?? p.priceMax)
                                    @if (p.priceMin != null && p.priceMax != null && p.priceMin != p.priceMax)
                                    {
                                        <text> - </text>@string.Format(System.Globalization.CultureInfo.GetCultureInfo("vi-VN"), "{0:C0}", p.priceMax)
                                    }
                                }
                                else
                                {
                                    <text>Liên hệ</text>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else if (isPriceFiltering)
        {
            <div class="empty-state">
                <i class="fas fa-search"></i>
                <h3>Không có sản phẩm phù hợp với khoảng giá</h3>
                <p>Không tìm thấy sản phẩm nào trong khoảng giá bạn chọn</p>
            </div>
        }
        else if (totalCount == 0)
        {
            <div class="empty-state">
                <i class="fas fa-box-open"></i>
                <h3>Không tìm thấy sản phẩm</h3>
                <p>Thử thay đổi bộ lọc hoặc từ khóa tìm kiếm của bạn</p>
                <a class="btn filter-btn filter-btn-primary mt-3" asp-controller="Home" asp-action="GetAllProducts">
                    <i class="fas fa-redo me-2"></i>Xem tất cả sản phẩm
                </a>
            </div>
        }
        
        <!-- Sản phẩm khác (Liên hệ hoặc ngoài khoảng giá) -->
        @if (isPriceFiltering && otherCount > 0)
        {
            <div class="section-other">
                <div class="section-header">
                    <h3><i class="fas fa-info-circle me-2"></i>Sản phẩm khác</h3>
                    <span class="badge">@otherCount sản phẩm</span>
                </div>
                <p class="section-note">
                    <i class="fas fa-lightbulb me-1"></i>
                    Các sản phẩm dưới đây có giá ngoài khoảng lọc hoặc cần liên hệ để biết giá
                </p>
                
                <div class="products-grid">
                    @foreach (var p in otherProducts)
                    {
                        <div class="product-card-item" style="opacity: 0.85;">
                            <div class="card-img-wrapper">
                                <a asp-controller="Product" asp-action="ProductDetailIndex" asp-route-id="@p.id" class="text-decoration-none">
                                    <img src="@((p.thumbnail ?? "/images/product-placeholder.png"))" class="card-img-top" alt="@p.name" />
                                </a>
                                <a asp-controller="Product" asp-action="ProductDetailIndex" asp-route-id="@p.id" class="quick-view text-decoration-none">
                                    <i class="fas fa-eye me-1"></i> Xem chi tiết
                                </a>
                            </div>
                            <div class="card-body">
                                <a asp-controller="Product" asp-action="ProductDetailIndex" asp-route-id="@p.id" class="text-decoration-none">
                                    <div class="product-name">@p.name</div>
                                </a>
                                <div class="product-brand">
                                    <i class="fas fa-tag"></i>
                                    <span>@p.brandName</span>
                                    @if (!string.IsNullOrEmpty((string)p.productCode))
                                    {
                                        <span class="product-code">@p.productCode</span>
                                    }
                                </div>
                                <div class="product-price" style="color: #f57c00; -webkit-text-fill-color: #f57c00;">
                                    @if (p.priceMin != null || p.priceMax != null)
                                    {
                                        @string.Format(System.Globalization.CultureInfo.GetCultureInfo("vi-VN"), "{0:C0}", p.priceMin ?? p.priceMax)
                                        @if (p.priceMin != null && p.priceMax != null && p.priceMin != p.priceMax)
                                        {
                                            <text> - </text>@string.Format(System.Globalization.CultureInfo.GetCultureInfo("vi-VN"), "{0:C0}", p.priceMax)
                                        }
                                    }
                                    else
                                    {
                                        <i class="fas fa-phone-alt me-1"></i><text>Liên hệ</text>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
<script>
(function() {
    const form = document.getElementById('filterForm');
    const minPriceInput = document.getElementById('minPrice');
    const maxPriceInput = document.getElementById('maxPrice');
    const minPriceError = document.getElementById('minPriceError');
    const maxPriceError = document.getElementById('maxPriceError');
    const priceRangeError = document.getElementById('priceRangeError');
    const submitBtn = document.getElementById('submitBtn');
    
    function clearErrors() {
        minPriceInput.classList.remove('is-invalid');
        maxPriceInput.classList.remove('is-invalid');
        minPriceError.classList.remove('show');
        maxPriceError.classList.remove('show');
        priceRangeError.classList.remove('show');
        minPriceError.textContent = '';
        maxPriceError.textContent = '';
        priceRangeError.textContent = '';
    }
    
    function validatePrice() {
        clearErrors();
        let isValid = true;
        
        const minVal = minPriceInput.value.trim();
        const maxVal = maxPriceInput.value.trim();
        const minPrice = minVal ? parseFloat(minVal) : null;
        const maxPrice = maxVal ? parseFloat(maxVal) : null;
        
        // Validate minPrice không được âm
        if (minPrice !== null && minPrice < 0) {
            minPriceInput.classList.add('is-invalid');
            minPriceError.textContent = 'Giá không được âm';
            minPriceError.classList.add('show');
            isValid = false;
        }
        
        // Validate maxPrice không được âm
        if (maxPrice !== null && maxPrice < 0) {
            maxPriceInput.classList.add('is-invalid');
            maxPriceError.textContent = 'Giá không được âm';
            maxPriceError.classList.add('show');
            isValid = false;
        }
        
        // Validate minPrice không được lớn hơn maxPrice
        if (minPrice !== null && maxPrice !== null && minPrice > maxPrice) {
            minPriceInput.classList.add('is-invalid');
            maxPriceInput.classList.add('is-invalid');
            priceRangeError.textContent = 'Giá tối thiểu không được lớn hơn giá tối đa';
            priceRangeError.classList.add('show');
            isValid = false;
        }
        
        // Validate số quá lớn (tránh overflow)
        const maxAllowed = 999999999999; // ~1 nghìn tỷ
        if (minPrice !== null && minPrice > maxAllowed) {
            minPriceInput.classList.add('is-invalid');
            minPriceError.textContent = 'Giá quá lớn';
            minPriceError.classList.add('show');
            isValid = false;
        }
        
        if (maxPrice !== null && maxPrice > maxAllowed) {
            maxPriceInput.classList.add('is-invalid');
            maxPriceError.textContent = 'Giá quá lớn';
            maxPriceError.classList.add('show');
            isValid = false;
        }
        
        return isValid;
    }
    
    // Validate khi nhập
    minPriceInput.addEventListener('input', validatePrice);
    maxPriceInput.addEventListener('input', validatePrice);
    
    // Validate khi blur (mất focus)
    minPriceInput.addEventListener('blur', validatePrice);
    maxPriceInput.addEventListener('blur', validatePrice);
    
    // Validate khi submit form
    form.addEventListener('submit', function(e) {
        if (!validatePrice()) {
            e.preventDefault();
            return false;
        }
        
        // Tự động sửa giá trị âm thành 0 trước khi submit
        if (minPriceInput.value && parseFloat(minPriceInput.value) < 0) {
            minPriceInput.value = '0';
        }
        if (maxPriceInput.value && parseFloat(maxPriceInput.value) < 0) {
            maxPriceInput.value = '';
        }
        
        // Tự động hoán đổi nếu min > max
        const min = parseFloat(minPriceInput.value) || 0;
        const max = parseFloat(maxPriceInput.value) || Infinity;
        if (min > max && maxPriceInput.value) {
            const temp = minPriceInput.value;
            minPriceInput.value = maxPriceInput.value;
            maxPriceInput.value = temp;
        }
    });
    
    // Format số khi blur
    function formatNumber(input) {
        const val = input.value.trim();
        if (val && !isNaN(val)) {
            const num = Math.max(0, Math.floor(parseFloat(val)));
            input.value = num;
        }
    }
    
    minPriceInput.addEventListener('blur', function() { formatNumber(this); });
    maxPriceInput.addEventListener('blur', function() { formatNumber(this); });
})();
