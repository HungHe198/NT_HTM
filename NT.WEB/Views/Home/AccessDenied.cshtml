@{
    ViewData["Title"] = "Không có quyền truy cập";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var resource = ViewBag.Resource as string;
    var action = ViewBag.Action as string;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow border-0">
                <div class="card-body text-center py-5">
                    <div class="mb-4">
                        <i class="fas fa-ban text-danger" style="font-size: 80px;"></i>
                    </div>
                    <h2 class="text-danger mb-3">403 - Không có quyền truy cập</h2>
                    <p class="text-muted mb-4">
                        Bạn không có quyền truy cập vào trang này.
                        @if (!string.IsNullOrWhiteSpace(resource) && !string.IsNullOrWhiteSpace(action))
                        {
                            <br />
                            <span class="badge bg-warning text-dark mt-2">
                                Yêu cầu quyền: <strong>@resource</strong> - <strong>@action</strong>
                            </span>
                        }
                    </p>
                    
                    <div class="alert alert-info text-start">
                        <h6><i class="fas fa-info-circle me-2"></i>Bạn có thể:</h6>
                        <ul class="mb-0">
                            <li>Liên hệ quản trị viên để được cấp quyền</li>
                            <li>Đăng nhập bằng tài khoản khác có đủ quyền</li>
                            <li>Quay lại trang trước đó</li>
                        </ul>
                    </div>

                    <div class="mt-4">
                        <a href="javascript:history.back()" class="btn btn-secondary me-2">
                            <i class="fas fa-arrow-left me-1"></i> Quay lại
                        </a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary me-2">
                            <i class="fas fa-home me-1"></i> Trang chủ
                        </a>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary">
                            <i class="fas fa-sign-in-alt me-1"></i> Đăng nhập lại
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
