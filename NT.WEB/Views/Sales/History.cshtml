@model IEnumerable<NT.SHARED.Models.Order>

@{
    ViewData["Title"] = "Lịch sử bán hàng tại quầy";
    int days = ViewBag.Days ?? 30;
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="fas fa-history me-2"></i>Lịch sử bán hàng tại quầy</h2>
            <p class="text-muted">Thời gian: Từ @DateTime.UtcNow.Date.AddDays(-days).ToString("dd/MM/yyyy") đến @DateTime.UtcNow.Date.ToString("dd/MM/yyyy")</p>
        </div>
        <div class="col-auto">
            <a href="@Url.Action("Index", "Sales")" class="btn btn-primary">
                <i class="fas fa-cash-register me-1"></i> Bán hàng mới
            </a>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm bg-primary text-white">
                <div class="card-body">
                    <h6 class="mb-1 opacity-75">Tổng đơn hàng</h6>
                    <p class="h3 mb-0">@(Model?.Count() ?? 0)</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm bg-success text-white">
                <div class="card-body">
                    <h6 class="mb-1 opacity-75">Tổng doanh thu</h6>
                    <p class="h3 mb-0">@Model?.Sum(o => o.FinalAmount).ToString("#,##0")₫</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm bg-danger text-white">
                <div class="card-body">
                    <h6 class="mb-1 opacity-75">Tổng giảm giá</h6>
                    <p class="h3 mb-0">@Model?.Sum(o => o.DiscountAmount ?? 0).ToString("#,##0")₫</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm bg-info text-white">
                <div class="card-body">
                    <h6 class="mb-1 opacity-75">Đơn trung bình</h6>
                    <p class="h3 mb-0">@(Model?.Any() == true ? (Model.Sum(o => o.FinalAmount) / Model.Count()).ToString("#,##0") : "0")₫</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Orders Table -->
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="fas fa-list me-2"></i>Danh sách đơn hàng</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Mã đơn</th>
                            <th>SĐT khách</th>
                            <th>Tổng tiền</th>
                            <th>Giảm giá</th>
                            <th>Thành tiền</th>
                            <th>PT thanh toán</th>
                            <th>Trạng thái</th>
                            <th>Ngày giờ</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!(Model?.Any() ?? false))
                        {
                            <tr>
                                <td colspan="9" class="text-center py-5 text-muted">
                                    <i class="fas fa-inbox fa-3x mb-3 opacity-25"></i>
                                    <p class="mt-2">Chưa có đơn hàng nào</p>
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var order in Model.OrderByDescending(o => o.CreatedTime))
                            {
                                <tr>
                                    <td>
                                        <code>@order.Id.ToString().Substring(0, 8).ToUpper()</code>
                                    </td>
                                    <td>@order.PhoneNumber</td>
                                    <td>@order.TotalAmount.ToString("#,##0")₫</td>
                                    <td>
                                        @if (order.DiscountAmount.HasValue && order.DiscountAmount > 0)
                                        {
                                            <span class="text-danger">-@order.DiscountAmount.Value.ToString("#,##0")₫</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">—</span>
                                        }
                                    </td>
                                    <td><strong class="text-primary">@order.FinalAmount.ToString("#,##0")₫</strong></td>
                                    <td>@(order.PaymentMethod?.Name ?? "N/A")</td>
                                    <td>
                                        @{
                                            string statusBadge = order.Status switch
                                            {
                                                "-1" => "badge bg-danger",
                                                "0" => "badge bg-warning",
                                                "1" => "badge bg-info",
                                                "2" => "badge bg-primary",
                                                "3" => "badge bg-success",
                                                _ => "badge bg-secondary"
                                            };
                                            string statusText = order.Status switch
                                            {
                                                "-1" => "Đã hủy",
                                                "0" => "Chờ xác nhận",
                                                "1" => "Đã xác nhận",
                                                "2" => "Đang giao",
                                                "3" => "Giao thành công",
                                                _ => "Không rõ"
                                            };
                                        }
                                        <span class="@statusBadge">@statusText</span>
                                    </td>
                                    <td><small>@order.CreatedTime.ToString("dd/MM/yyyy HH:mm")</small></td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            @* Show POS-style invoice for POS orders instead of online Review *@
                                            <a href="@Url.Action("PrintReceipt", "Sales", new { orderId = order.Id })" class="btn btn-outline-primary" title="Xem hóa đơn POS">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="@Url.Action("PrintReceipt", "Sales", new { orderId = order.Id })" class="btn btn-outline-info" title="In hóa đơn">
                                                <i class="fas fa-print"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
