@model IEnumerable<NT.SHARED.Models.Product>

@{
    // Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Products";
}

<div class="container-fluid">
    <div class="row">
        <!-- Left menu column -->
        <aside class="col-md-3 col-lg-2 py-3">
            <div class="bg-white rounded shadow-sm p-3">
                <a asp-controller="Home" asp-action="Index" class="d-block mb-3 text-decoration-none">
                    <img src="/images/logo.png" alt="Logo" style="height:32px;">
                </a>

                <div class="mb-3">
                    <div class="fw-bold">quản lí sản phẩm <span class="badge bg-light text-dark">Free</span></div>
                </div>

                <nav class="nav nav-pills flex-column">
                   
                    <a asp-controller="Admin" asp-action="Index" class="nav-link"><i class="fa fa-list me-2"></i>Danh Mục</a>
                 
                    <a asp-controller="Color" asp-action="Index" class="nav-link"><i class="fa fa-palette me-2"></i>Màu Sắc</a>
                    <a asp-controller="Length" asp-action="Index" class="nav-link"><i class="fa fa-ruler-horizontal me-2"></i>Độ Dài</a>
                    <a asp-controller="SurfaceFinish" asp-action="Index" class="nav-link"><i class="fa fa-layer-group me-2"></i>Lớp Phủ</a>
                    <a asp-controller="Hardness" asp-action="Index" class="nav-link"><i class="fa fa-gavel me-2"></i>Độ Cứng</a>
                    <a asp-controller="Elasticity" asp-action="Index" class="nav-link"><i class="fa fa-wave-square me-2"></i>Độ Đàn Hồi</a>
                 
                </nav>
            </div>
        </aside>

        <!-- Main content column -->
        <section class="col-md-9 col-lg-10 py-3">
            <div class="mb-4 d-flex justify-content-between align-items-center">
                <h1 class="h4 mb-0">Products</h1>
                <a asp-action="Create" class="btn btn-primary">Create New Product</a>
            </div>

            <form method="get" asp-action="Index" class="d-flex mb-3">
                <input type="text" name="q" value="" class="form-control me-2" placeholder="Search name..." />
                <button type="submit" class="btn btn-secondary">Search</button>
            </form>

            <div class="table-responsive">
                <table class="table table-striped align-middle">
                    <thead>
                        <tr>
                            <th>ProductCode</th>
                            <th>Name</th>
                            <th>BrandId</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach(var p in Model ?? Enumerable.Empty<NT.SHARED.Models.Product>())
                    {
                        <tr>
                            <td>@p.ProductCode</td>
                            <td>@p.Name</td>
                            <td>@p.BrandId</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@p.Id">Details</a> |
                                <a asp-action="Edit" asp-route-id="@p.Id">Edit</a> |
                                <a asp-action="Delete" asp-route-id="@p.Id">Delete</a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </section>
    </div>
</div>