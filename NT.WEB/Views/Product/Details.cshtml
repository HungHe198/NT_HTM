@model NT.SHARED.Models.Product

@{
    ViewBag.Title = "Product Details";
    var details = ViewBag.ProductDetails as IEnumerable<NT.SHARED.Models.ProductDetail> ?? Enumerable.Empty<NT.SHARED.Models.ProductDetail>();
}

<h1>Chi tiết sản phẩm</h1>

<div>
    <h4>@Model.Name (@Model.ProductCode)</h4>
    <p>@Model.ShortDescription</p>
    @if (!string.IsNullOrWhiteSpace(Model.Thumbnail))
    {
        <img src="@Model.Thumbnail" alt="thumbnail" style="height:120px;object-fit:contain" />
    }
</div>

<p>
    <a asp-action="CreateDetail" asp-route-productId="@Model.Id" class="btn btn-sm btn-primary">Add Product Detail</a>
    <a asp-action="Index" class="btn btn-sm btn-secondary">Back to list</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Giá</th>
            <th>Tên</th>
            <th>Chiều dài</th>
            <th>Màu</th>
            <th>Hoàn thiện</th>
            <th>Độ cứng</th>
            <th>Độ đàn hồi</th>
            <th>Xuất xứ/th>
            <th>Thông số</th>
            <th>Hoạt động</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach(var d in details)
    {
        <tr>
            <td>@d.Id</td>
            <td>@(d.Price.ToString("N2"))</td>
            <td>@d.StockQuantity</td>
            <td>@(d.Length != null ? d.Length.Name : (d.LengthId != Guid.Empty ? d.LengthId.ToString() : ""))</td>
            <td>@(d.Color != null ? d.Color.Name : (d.ColorId != Guid.Empty ? d.ColorId.ToString() : ""))</td>
            <td>@(d.SurfaceFinish != null ? d.SurfaceFinish.Name : (d.SurfaceFinishId != Guid.Empty ? d.SurfaceFinishId.ToString() : ""))</td>
            <td>@(d.Hardness != null ? d.Hardness.Name : (d.HardnessId != Guid.Empty ? d.HardnessId.ToString() : ""))</td>
            <td>@(d.Elasticity != null ? d.Elasticity.Name : (d.ElasticityId != Guid.Empty ? d.ElasticityId.ToString() : ""))</td>
            <td>@(d.OriginCountry != null ? d.OriginCountry.Name : (d.OriginCountryId != Guid.Empty ? d.OriginCountryId.ToString() : ""))</td>
            <td>
                @if(!string.IsNullOrWhiteSpace(d.Sections)) { <div><strong>Sóo lượng:</strong> @d.Sections</div> }
                @if(!string.IsNullOrWhiteSpace(d.CollapsedLength)) { <div><strong>Chiều dài thu cần:</strong> @d.CollapsedLength</div> }
                @if(!string.IsNullOrWhiteSpace(d.Weight)) { <div><strong>Trọng lượng:</strong> @d.Weight</div> }
            </td>
            <td>@(d.IsActive ? "Có" : "Không")</td>
            <td>
                <a asp-action="EditDetail" asp-route-id="@d.Id">Sửa</a> |
                <form asp-action="DeleteDetail" asp-route-id="@d.Id" method="post" class="d-inline">
                    <button type="submit" class="btn btn-link p-0">Xóa</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>