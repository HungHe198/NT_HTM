@model NT.SHARED.Models.ProductDetail

@{
    ViewBag.Title = "Edit Product Detail";
}

<h1>Edit Product Detail</h1>

<form asp-action="EditDetail" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StockQuantity"></label>
        <input asp-for="StockQuantity" class="form-control" />
        <span asp-validation-for="StockQuantity" class="text-danger"></span>
    </div>
    <!-- FK inputs -->
    <div class="form-group">
        <label asp-for="LengthId">LengthId (GUID)</label>
        <input asp-for="LengthId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ColorId">ColorId (GUID)</label>
        <input asp-for="ColorId" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Details" asp-route-id="@Model.ProductId" class="btn btn-secondary">Cancel</a>
</form>