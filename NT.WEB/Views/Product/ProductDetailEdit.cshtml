            // <div class="form-group">
            //     <label asp-for="SoldQuantity">@Html.DisplayNameFor(m => m.SoldQuantity)</label>
            //     <input asp-for="SoldQuantity" class="form-control" readonly />
            //     <small class="text-muted">Giá trị này được tự động tính từ các đơn hàng</small>
            // </div>

            <div class="form-group">
                <label asp-for="CostPrice">@Html.DisplayNameFor(m => m.CostPrice)</label>
                <input asp-for="CostPrice" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="CostPrice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastImportDate">@Html.DisplayNameFor(m => m.LastImportDate)</label>
                <input asp-for="LastImportDate" class="form-control" type="datetime-local" value="@(Model.LastImportDate?.ToString("yyyy-MM-ddTHH:mm") ?? DateTime.Now.ToString("yyyy-MM-ddTHH:mm"))" />
                <span asp-validation-for="LastImportDate" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <input asp-for="IsActive" class="form-check-input" />
                <label asp-for="IsActive" class="form-check-label">@Html.DisplayNameFor(m => m.IsActive)</label>
            </div>
        </div>
    </div>

    <hr />
    <h5>Quản lý ảnh</h5>
    <p class="text-muted">Tick chọn ảnh muốn xóa. Có thể thêm ảnh mới bên dưới. Hỗ trợ upload tối đa 2GB.</p>

    @if (existingImages.Any())
    {
        <div class="mb-3">
            <label class="form-label">Ảnh hiện có:</label>
            <div class="d-flex flex-wrap gap-3">
                @foreach (var img in existingImages)
                {
                    <div class="text-center" style="position:relative;">
                        <img src="@img.ImageUrl" alt="Product Image" 
                             style="width:120px; height:120px; object-fit:cover; border:1px solid #ddd; border-radius:4px;" />
                        <div class="mt-1">
                            <input type="checkbox" name="deleteImageIds" value="@img.Id" id="del-@img.Id" class="form-check-input" />
                            <label for="del-@img.Id" class="form-check-label text-danger small">Xóa</label>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <p class="text-muted">Chưa có ảnh nào.</p>
    }

    <div class="form-group">
        <label>Thêm ảnh mới:</label>
        <input type="file" name="images" class="form-control" multiple accept="image/*" id="imageInput" />
    </div>

    <div id="imagePreviewContainer" class="d-flex flex-wrap gap-2 mb-3"></div>

    <hr />
    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    <a asp-action="Details" asp-route-id="@Model.ProductId" class="btn btn-secondary">Hủy</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Render server-side ModelState errors inline next to fields (in case client validation misses)
        (function(){
            var serverErrors = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(
                ViewData.ModelState.Where(kv => kv.Value?.Errors?.Count > 0)
                    .ToDictionary(kv => kv.Key, kv => kv.Value.Errors.Select(e => e.ErrorMessage).ToArray())
            ));

            function showServerErrors(){
                if(!serverErrors) return;
                Object.keys(serverErrors).forEach(function(key){
                    var messages = serverErrors[key];
                    if(!messages || messages.length === 0) return;
                    // find form elements by exact name or by suffix (for prefixed model binding)
                    var selector = '[name="' + key + '"]';
                    var el = document.querySelector(selector) || document.querySelector('[name$=".' + key + '"]');
                    // If element found, append an error span after it
                    if(el){
                        // avoid duplicating
                        var existing = el.parentNode.querySelector('.server-validation-' + key.replace(/[^a-z0-9_-]/gi,'_'));
                        if(existing) return;
                        var span = document.createElement('span');
                        span.className = 'text-danger server-validation-' + key.replace(/[^a-z0-9_-]/gi,'_');
                        span.style.display = 'block';
                        span.style.marginTop = '0.25rem';
                        span.textContent = messages.join(' | ');
                        el.parentNode.appendChild(span);
                    }
                });
            }

            // run after DOM ready
            if(document.readyState === 'loading'){
                document.addEventListener('DOMContentLoaded', showServerErrors);
            } else { showServerErrors(); }
        })();
        document.getElementById('imageInput').addEventListener('change', function(e) {
            const container = document.getElementById('imagePreviewContainer');
            container.innerHTML = '';
            const files = e.target.files;
            for (let i = 0; i < files.length; i++) {
                const file = files[i];
                if (file.type.startsWith('image/')) {
                    const reader = new FileReader();
                    reader.onload = function(event) {
                        const div = document.createElement('div');
                        div.style.position = 'relative';
                        div.innerHTML = `
                            <img src="${event.target.result}" 
                                 style="width:100px; height:100px; object-fit:cover; border:1px solid #ddd; border-radius:4px;" />
                            <small class="d-block text-center text-truncate" style="max-width:100px;">${file.name}</small>
                        `;
                        container.appendChild(div);
                    };
                    reader.readAsDataURL(file);
                }
            }
        });
    </script>
}
