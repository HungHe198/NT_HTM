@model IEnumerable<NT.SHARED.Models.ProductCategory>

<h2>Product Categories</h2>
<p><a asp-action="Create">Create New</a></p>
<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.ProductId</td>
            <td>@item.CategoryId</td>
            <td>
                <a asp-action="Details" asp-route-productId="@item.ProductId" asp-route-categoryId="@item.CategoryId">Details</a> |
                <a asp-action="Edit" asp-route-productId="@item.ProductId" asp-route-categoryId="@item.CategoryId">Edit</a> |
                <a asp-action="Delete" asp-route-productId="@item.ProductId" asp-route-categoryId="@item.CategoryId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
