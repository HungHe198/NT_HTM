@model NT.SHARED.Models.Voucher

@{
    ViewData["Title"] = "Xóa Voucher";
}

<h1>Xóa Voucher</h1>

<h3>B?n có ch?c ch?n mu?n xóa voucher này?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Mã voucher</dt>
        <dd class="col-sm-10">@Model.Code</dd>

        <dt class="col-sm-2">Ngày b?t ??u</dt>
        <dd class="col-sm-10">@Model.StartDate?.ToString("yyyy-MM-dd HH:mm")</dd>
        <dt class="col-sm-2">Ngày k?t thúc</dt>
        <dd class="col-sm-10">@Model.EndDate?.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-2">Ph?n tr?m gi?m</dt>
        <dd class="col-sm-10">@Model.DiscountPercentage?.ToString("N2")</dd>
    </dl>
</div>

<form asp-action="Delete" asp-route-id="@Model.Id" method="post">
    @Html.AntiForgeryToken()
    <input type="submit" value="Xóa" class="btn btn-danger" /> |
    <a asp-action="Index" class="btn btn-link">Quay l?i</a>
</form>