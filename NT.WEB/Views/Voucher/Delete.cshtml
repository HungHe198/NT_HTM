@model NT.SHARED.Models.Voucher

@{
    ViewData["Title"] = "Xóa Voucher";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Quản lý Voucher</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Xóa</li>
                </ol>
            </nav>
            <h2><i class="fas fa-ticket-alt me-2 text-danger"></i>Xóa Voucher</h2>
            <p class="text-muted">Bạn sắp xóa mã giảm giá. Hành động này không thể hoàn tác.</p>
        </div>
        <div class="col-auto align-self-start">
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Quay lại</a>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-light">
                    <h5 class="mb-0 text-danger">Xác nhận xóa</h5>
                </div>
                <div class="card-body">
                    <p class="text-danger fw-semibold">Bạn chắc chắn muốn xóa voucher này?</p>

                    <dl class="row">
                        <dt class="col-sm-4 text-muted">Mã voucher</dt>
                        <dd class="col-sm-8"><strong>@Model.Code</strong></dd>

                        <dt class="col-sm-4 text-muted">Phần trăm giảm giá</dt>
                        <dd class="col-sm-8">@(Model.DiscountPercentage?.ToString("N0") ?? "-")%</dd>

                        <dt class="col-sm-4 text-muted">Ngày bắt đầu</dt>
                        <dd class="col-sm-8">@(Model.StartDate?.ToString("dd/MM/yyyy HH:mm") ?? "Không giới hạn")</dd>

                        <dt class="col-sm-4 text-muted">Ngày kết thúc</dt>
                        <dd class="col-sm-8">@(Model.EndDate?.ToString("dd/MM/yyyy HH:mm") ?? "Không giới hạn")</dd>

                        <dt class="col-sm-4 text-muted">Số lần sử dụng</dt>
                        <dd class="col-sm-8">@Model.UsageCount lần</dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm sticky-top" style="top:20px;">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <div class="fs-5 fw-bold">@Model.Code</div>
                        <div class="text-muted">Mã giảm giá</div>
                    </div>

                    <div class="mb-3">
                        <span class="badge bg-danger fs-6">Xóa vĩnh viễn</span>
                    </div>

                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Xác nhận xóa voucher này?');" class="w-100">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger btn-sm w-100 mb-2">Xác nhận xóa</button>
                    </form>

                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm w-100">Hủy</a>

                    <hr />

                    <div class="text-start mt-3">
                        <small class="text-muted">Tóm tắt</small>
                        <ul class="list-unstyled mt-2 mb-0">
                            <li><strong>Áp dụng từ:</strong> @(Model.StartDate?.ToString("dd/MM/yyyy") ?? "Ngay")</li>
                            <li><strong>Đến:</strong> @(Model.EndDate?.ToString("dd/MM/yyyy") ?? "Không giới hạn")</li>
                            <li><strong>Đã dùng:</strong> @Model.UsageCount</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
