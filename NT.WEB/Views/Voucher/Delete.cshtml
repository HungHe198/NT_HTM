@model NT.SHARED.Models.Voucher

@{
    ViewData["Title"] = "Delete Voucher";
}

<h1>Delete Voucher</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Code</dt>
        <dd class="col-sm-10">@Model.Code</dd>

        <dt class="col-sm-2">Expiry Date</dt>
        <dd class="col-sm-10">@Model.ExpiryDate?.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-2">Discount</dt>
        <dd class="col-sm-10">@Model.DiscountAmount?.ToString("N2")</dd>
    </dl>
</div>

<form asp-action="Delete" asp-route-id="@Model.Id" method="post">
    @Html.AntiForgeryToken()
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index" class="btn btn-link">Cancel</a>
</form>