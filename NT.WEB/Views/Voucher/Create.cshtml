@model NT.SHARED.Models.Voucher

@{
    ViewData["Title"] = "Tạo Voucher mới";
}

<h1>Tạo Voucher mới</h1>

<form asp-action="Create" method="post" class="form-horizontal">
    @Html.AntiForgeryToken()
    
    <div class="row">
        <div class="col-md-6">
            <div class="form-group mb-3">
                <label asp-for="Code" class="control-label">Mã voucher</label>
                <input asp-for="Code" class="form-control" placeholder="VD: GIAM10, SALE20..." />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DiscountPercentage" class="control-label">Phần trăm giảm giá</label>
                <div class="input-group">
                    <input asp-for="DiscountPercentage" class="form-control" type="number" min="0" max="100" step="1" placeholder="VD: 10, 20, 50..." />
                    <span class="input-group-text">%</span>
                </div>
                <span asp-validation-for="DiscountPercentage" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MaxDiscountAmount" class="control-label">Số tiền giảm tối đa</label>
                <div class="input-group">
                    <input asp-for="MaxDiscountAmount" class="form-control" type="number" min="0" placeholder="VD: 100000" />
                    <span class="input-group-text">₫</span>
                </div>
                <small class="text-muted">Để trống nếu không giới hạn</small>
                <span asp-validation-for="MaxDiscountAmount" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MinOrderAmount" class="control-label">Giá trị đơn hàng tối thiểu</label>
                <div class="input-group">
                    <input asp-for="MinOrderAmount" class="form-control" type="number" min="0" placeholder="VD: 500000" />
                    <span class="input-group-text">₫</span>
                </div>
                <small class="text-muted">Để trống nếu không yêu cầu đơn hàng tối thiểu</small>
                <span asp-validation-for="MinOrderAmount" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group mb-3">
                <label asp-for="StartDate" class="control-label">Ngày bắt đầu</label>
                <input asp-for="StartDate" type="datetime-local" class="form-control" />
                <small class="text-muted">Để trống nếu có hiệu lực ngay</small>
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="EndDate" class="control-label">Ngày kết thúc</label>
                <input asp-for="EndDate" type="datetime-local" class="form-control" min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                <small class="text-muted">Để trống nếu không giới hạn thời gian</small>
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MaxUsage" class="control-label">Số lần sử dụng tối đa</label>
                <input asp-for="MaxUsage" class="form-control" type="number" min="1" placeholder="VD: 100" />
                <small class="text-muted">Để trống nếu không giới hạn số lần sử dụng</small>
                <span asp-validation-for="MaxUsage" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Tạo Voucher" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-link">Hủy</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
