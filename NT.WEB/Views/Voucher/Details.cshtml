@model NT.SHARED.Models.Voucher

@{
    ViewData["Title"] = "Chi ti?t Voucher";
}

<h1>Chi ti?t Voucher</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Code)</dt>
        <dd class="col-sm-10">@Model.Code</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.DiscountPercentage)</dt>
        <dd class="col-sm-10">@Model.DiscountPercentage?.ToString("N2")</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.MaxDiscountAmount)</dt>
        <dd class="col-sm-10">@Model.MaxDiscountAmount?.ToString("N2")</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.MinOrderAmount)</dt>
        <dd class="col-sm-10">@Model.MinOrderAmount?.ToString("N2")</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.StartDate)</dt>
        <dd class="col-sm-10">@Model.StartDate?.ToString("yyyy-MM-dd HH:mm")</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.EndDate)</dt>
        <dd class="col-sm-10">@Model.EndDate?.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.UsageCount)</dt>
        <dd class="col-sm-10">@Model.UsageCount</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.MaxUsage)</dt>
        <dd class="col-sm-10">@Model.MaxUsage</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">S?a</a>
    <a asp-action="Index" class="btn btn-link">Quay l?i danh sách</a>
</p>