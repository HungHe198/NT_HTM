@model IEnumerable<NT.SHARED.Models.Voucher>

@{
    ViewData["Title"] = "Quản lý Voucher";
    var list = Model ?? Enumerable.Empty<NT.SHARED.Models.Voucher>();
    var totalCount = list.Count();
    var validCount = list.Count(v => v.IsValid());
    var expiredCount = list.Count(v => (v.EndDate.HasValue && DateTime.Now > v.EndDate.Value) || (v.MaxUsage.HasValue && v.UsageCount >= v.MaxUsage.Value));
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Quản lý Voucher</li>
                </ol>
            </nav>
            <h2><i class="fas fa-ticket-alt me-2"></i>Quản lý Voucher</h2>
            <p class="text-muted">Tạo, sửa và quản lý mã giảm giá áp dụng cho đơn hàng</p>
        </div>
        <div class="col-auto align-self-start">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i> Tạo mới
            </a>
        </div>
    </div>

    <!-- Stats Row -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex align-items-center gap-3">
                    <div class="icon-box" style="width:56px;height:56px;border-radius:12px;background:linear-gradient(135deg,#00bcd4,#00838f);color:white;display:flex;align-items:center;justify-content:center;font-size:22px;">
                        <i class="fas fa-list"></i>
                    </div>
                    <div>
                        <div class="text-muted small">Mã giảm giá đã tạo</div>
                        <div class="fw-bold fs-4">@totalCount</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex align-items-center gap-3">
                    <div class="icon-box" style="width:56px;height:56px;border-radius:12px;background:linear-gradient(135deg,#28a745,#10b981);color:white;display:flex;align-items:center;justify-content:center;font-size:22px;">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div>
                        <div class="text-muted small">Mã giảm giá còn hiệu lực</div>
                        <div class="fw-bold fs-4 text-success">@validCount</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex align-items-center gap-3">
                    <div class="icon-box" style="width:56px;height:56px;border-radius:12px;background:linear-gradient(135deg,#f44336,#e53935);color:white;display:flex;align-items:center;justify-content:center;font-size:22px;">
                        <i class="fas fa-times-circle"></i>
                    </div>
                    <div>
                        <div class="text-muted small">Mã giảm giá hết hạn</div>
                        <div class="fw-bold fs-4 text-danger">@expiredCount</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Danh sách Voucher</h5>
            <small class="text-muted">@totalCount voucher</small>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Mã voucher</th>
                            <th>Phần trăm giảm</th>
                            <th>Giảm tối đa</th>
                            <th>Giá trị đơn hàng tối thiểu</th>
                            <th>Ngày bắt đầu</th>
                            <th>Ngày kết thúc</th>
                            <th>Số đã dùng</th>
                            <th>Giới hạn</th>
                            <th>Trạng thái</th>
                            <th class="text-end">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in list)
                        {
                            var now = DateTime.Now;
                            var isNotStarted = item.StartDate.HasValue && now < item.StartDate.Value;
                            var isExpiredByDate = item.EndDate.HasValue && now > item.EndDate.Value;
                            var isExpiredByUsage = item.MaxUsage.HasValue && item.UsageCount >= item.MaxUsage.Value;
                            var isActive = !isNotStarted && !isExpiredByDate && !isExpiredByUsage;

                            <tr class="@(isActive ? string.Empty : (isNotStarted ? "table-warning" : "table-secondary"))">
                                <td class="fw-semibold">@item.Code</td>
                                <td>@(item.DiscountPercentage.HasValue ? item.DiscountPercentage.Value.ToString("N0") + "%" : "-")</td>
                                <td>@(item.MaxDiscountAmount.HasValue ? string.Format("{0:N0}₫", item.MaxDiscountAmount.Value) : "Không giới hạn")</td>
                                <td>@(item.MinOrderAmount.HasValue ? string.Format("{0:N0}₫", item.MinOrderAmount.Value) : "-")</td>
                                <td>@(item.StartDate?.ToString("dd/MM/yyyy HH:mm") ?? "-")</td>
                                <td>@(item.EndDate?.ToString("dd/MM/yyyy HH:mm") ?? "-")</td>
                                <td>@item.UsageCount</td>
                                <td>@(item.MaxUsage?.ToString() ?? "Không giới hạn")</td>
                                <td>
                                    @if (isNotStarted)
                                    {
                                        <span class="badge bg-warning">Chưa bắt đầu</span>
                                    }
                                    else if (isActive)
                                    {
                                        <span class="badge bg-success">Còn hiệu lực</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Hết hiệu lực</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary me-1">Chi tiết</a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1">Sửa</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Xóa</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
