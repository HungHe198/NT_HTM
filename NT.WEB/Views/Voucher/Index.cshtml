@model IEnumerable<NT.SHARED.Models.Voucher>

@{
    ViewData["Title"] = "Quản lý Voucher";
}

<h1>Quản lý Voucher</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Tạo mới</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Mã voucher</th>
            <th>Phần trăm giảm</th>
            <th>Giảm tối đa</th>
            <th>Giá trị đơn hàng tối thiểu</th>
            <th>Ngày bắt đầu</th>
            <th>Ngày kết thúc</th>
            <th>Số đã dùng</th>
            <th>Giới hạn</th>
            <th>Trạng thái</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model ?? Enumerable.Empty<NT.SHARED.Models.Voucher>())
    {
        var now = DateTime.UtcNow;
        var isNotStarted = item.StartDate.HasValue && now < item.StartDate.Value;
        var isExpiredByDate = item.EndDate.HasValue && now > item.EndDate.Value;
        var isExpiredByUsage = item.MaxUsage.HasValue && item.UsageCount >= item.MaxUsage.Value;
        var isActive = !isNotStarted && !isExpiredByDate && !isExpiredByUsage;
        
        <tr class="@(isActive ? "" : (isNotStarted ? "table-warning" : "table-secondary"))">
            <td>@item.Code</td>
            <td>@(item.DiscountPercentage?.ToString("N0") ?? "-")%</td>
            <td>@(item.MaxDiscountAmount?.ToString("N0") ?? "-") ?</td>
            <td>@(item.MinOrderAmount?.ToString("N0") ?? "-") ?</td>
            <td>@(item.StartDate?.ToString("dd/MM/yyyy HH:mm") ?? "-")</td>
            <td>@(item.EndDate?.ToString("dd/MM/yyyy HH:mm") ?? "-")</td>
            <td>@item.UsageCount</td>
            <td>@(item.MaxUsage?.ToString() ?? "Không giới hạn")</td>
            <td>
                @if (isNotStarted)
                {
                    <span class="badge bg-warning">Chưa bắt đầu</span>
                }
                else if (isActive)
                {
                    <span class="badge bg-success">Còn hiệu lực</span>
                }
                else
                {
                    <span class="badge bg-secondary">Hết hiệu lực</span>
                }
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Chi tiết</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Sửa</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
            </td>
        </tr>
    }
    </tbody>
</table>
