@model IEnumerable<NT.SHARED.Models.Category>

<h2>Danh sách danh mục</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Thêm danh mục</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Mô tả</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Xem</a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Sửa</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Xóa</a>
            </td>
        </tr>
    }
    </tbody>
</table>
