@model NT.SHARED.Models.ProductImage

@{
    ViewBag.Title = "Delete Product Image";
}

<h1>Delete Product Image</h1>

<h4>Are you sure you want to delete this image?</h4>

<div>
    @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl" alt="image" style="max-width:360px; max-height:240px;" />
    }
    <p class="mt-2">@Model.ImageUrl</p>
    <p>ProductDetailId: @Model.ProductDetailId</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>