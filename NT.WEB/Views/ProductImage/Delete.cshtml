@model NT.SHARED.Models.ProductImage

@{
    ViewBag.Title = "Xóa hình sản phẩm";
}

<h1>Xóa hình sản phẩm</h1>

<h4 class="text-danger">Bạn có chắc chắn muốn xóa hình này?</h4>

<div>
    @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl" alt="image" style="max-width:360px; max-height:240px;" />
    }
    <p class="mt-2">@Model.ImageUrl</p>
    <p>Mã bi?n th? SP: @Model.ProductDetailId</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
