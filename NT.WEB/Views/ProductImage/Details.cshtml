@model NT.SHARED.Models.ProductImage

@{
    ViewBag.Title = "Product Image Details";
}

<h1>Product Image Details</h1>

<div>
    <h4>Image</h4>
    @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl" alt="image" style="max-width:360px; max-height:240px;" />
    }
    <dl class="row mt-3">
        <dt class="col-sm-2">ImageUrl</dt>
        <dd class="col-sm-10">@Model.ImageUrl</dd>

        <dt class="col-sm-2">ProductDetailId</dt>
        <dd class="col-sm-10">@Model.ProductDetailId</dd>

        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to list</a>
</p>