@model NT.SHARED.Models.ProductImage

@{
    ViewBag.Title = "Chi tiết hình sản phẩm";
}

<h1>Chi tiết hình sản phẩm</h1>

<div>
    <h4>Hình</h4>
    @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl" alt="image" style="max-width:360px; max-height:240px;" />
    }
    <dl class="row mt-3">
        <dt class="col-sm-2">Đường dẫn hình</dt>
        <dd class="col-sm-10">@Model.ImageUrl</dd>

        <dt class="col-sm-2">Mã biến thể SP</dt>
        <dd class="col-sm-10">@Model.ProductDetailId</dd>

        <dt class="col-sm-2">Mã</dt>
        <dd class="col-sm-10">@Model.Id</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
</p>
