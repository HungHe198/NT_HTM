@model IEnumerable<NT.SHARED.Models.ProductImage>

@{
    ViewBag.Title = "Quản lý hình sản phẩm";
}

<h1>Quản lý hình sản phẩm</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Tạo mới</a>
</p>

<form method="get" asp-action="Index" class="form-inline mb-3">
    <input type="text" name="q" value="" class="form-control mr-2" placeholder="Tìm kiếm theo đường dẫn..." />
    <button type="submit" class="btn btn-secondary">Tìm kiếm</button>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Xem trước</th>
            <th>Đường dẫn hình</th>
            <th>Mã biến thể SP</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach(var pi in Model)
    {
        <tr>
            <td>
                @if (!string.IsNullOrWhiteSpace(pi.ImageUrl))
                {
                    <img src="@pi.ImageUrl" alt="img" style="max-height:60px; max-width:120px;" />
                }
            </td>
            <td>@pi.ImageUrl</td>
            <td>@pi.ProductDetailId</td>
            <td>
                <a asp-action="Details" asp-route-id="@pi.Id">Chi tiết</a> |
                <a asp-action="Edit" asp-route-id="@pi.Id">Sửa</a> |
                <a asp-action="Delete" asp-route-id="@pi.Id">Xóa</a>
            </td>
        </tr>
    }
    </tbody>
</table>
