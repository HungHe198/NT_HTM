@model IEnumerable<NT.SHARED.Models.Employee>

<h2>Danh sách nhân viên</h2>
<p><a asp-action="Create" class="btn btn-primary">Thêm mới</a></p>
<table class="table">
    <thead>
        <tr>
            <th>Mã người dùng</th>
            <th>Chức vụ</th>
            <th>Lương</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.UserId</td>
            <td>@item.Position</td>
            <td>@item.Salary</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Chi tiết</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Sửa</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
            </td>
        </tr>
    }
    </tbody>
</table>
