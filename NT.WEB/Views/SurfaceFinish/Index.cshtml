@model IEnumerable<NT.SHARED.Models.SurfaceFinish>

@{
    ViewBag.Title = "Quản lý hoàn thiện bề mặt";
}

<h1>Quản lý hoàn thiện bề mặt</h1>

<p>
    <a asp-controller="Product" asp-action="Index" class="btn btn-secondary me-2">
        <i class="bi bi-arrow-left"></i> Quay lại quản lý sản phẩm
    </a>
    <a asp-action="Create" class="btn btn-primary">Tạo mới</a>
</p>

<table class="table">
    <thead><tr><th>Tên</th><th>Mô tả</th><th></th></tr></thead>
    <tbody>
    @foreach(var s in Model)
    {
        <tr>
            <td>@s.Name</td>
            <td>@s.Description</td>
            <td>
                <a asp-action="Details" asp-route-id="@s.Id">Chi tiết</a> |
                <a asp-action="Edit" asp-route-id="@s.Id">Sửa</a> |
                <a asp-action="Delete" asp-route-id="@s.Id">Xóa</a>
            </td>
        </tr>
    }
    </tbody>
</table>
