@model IEnumerable<NT.SHARED.Models.SurfaceFinish>

@{
    ViewBag.Title = "Surface Finishes";
}

<h1>Surface Finishes</h1>

<p><a asp-action="Create" class="btn btn-primary">Create New</a></p>

<table class="table">
    <thead><tr><th>Name</th><th>Description</th><th></th></tr></thead>
    <tbody>
    @foreach(var s in Model)
    {
        <tr>
            <td>@s.Name</td>
            <td>@s.Description</td>
            <td>
                <a asp-action="Details" asp-route-id="@s.Id">Details</a> |
                <a asp-action="Edit" asp-route-id="@s.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@s.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>