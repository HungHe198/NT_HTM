@model IEnumerable<NT.SHARED.Models.Role>

<h2>Quản lý vai trò</h2>
<p><a asp-action="Create" class="btn btn-primary">Tạo mới</a></p>
<table class="table">
    <thead>
        <tr>
            <th>Tên vai trò</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Chi tiết</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Sửa</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
            </td>
        </tr>
    }
    </tbody>
</table>

